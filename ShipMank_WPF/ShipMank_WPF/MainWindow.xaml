<Window x:Class="ShipMank_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:components="clr-namespace:ShipMank_WPF.Components"
        Title="ShipMank" Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        ResizeMode="NoResize">
    <Grid>
        <Grid x:Name="MainContentGrid">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <ContentControl x:Name="NavbarContainer" Grid.Row="0" />

            <Frame x:Name="MainFrame" Grid.Row="1" NavigationUIVisibility="Hidden"/>
        </Grid>

        <Grid x:Name="PopupOverlay" Visibility="Collapsed">
            <Border Background="#80000000" MouseDown="PopupOverlay_MouseDown"/>
            <Border Background="White" 
                    CornerRadius="10"
                    MaxWidth="500"
                    MaxHeight="600"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Padding="0">
                <Border.Effect>
                    <DropShadowEffect Color="Black" Opacity="0.3" BlurRadius="20" ShadowDepth="0"/>
                </Border.Effect>
                <Grid>
                    <Frame x:Name="PopupFrame" 
                           NavigationUIVisibility="Hidden"
                           Background="Transparent"/>
                    <Button x:Name="CloseButton"
                            Content="✕"
                            Width="30"
                            Height="30"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Margin="0,10,10,0"
                            Background="Transparent"
                            BorderThickness="0"
                            FontSize="20"
                            FontWeight="Bold"
                            Foreground="#666666"
                            Cursor="Hand"
                            Click="CloseButton_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                CornerRadius="15">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#F0F0F0"/>
                                        <Setter Property="Foreground" Value="#333333"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>