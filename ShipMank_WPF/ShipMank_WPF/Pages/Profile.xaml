<Page x:Class="ShipMank_WPF.Pages.Profile"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ShipMank_WPF.Pages"
      xmlns:components="clr-namespace:ShipMank_WPF.Components"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="Profile" Background="Transparent">

    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#FFF9AF" Offset="0"/>
                <GradientStop Color="#EBF1F5" Offset="0.5"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Grid Margin="40">
            <Grid.ColumnDefinitions>
                <!-- Kolom 0: Untuk NavBar. Lebar tetap (Auto) -->
                <ColumnDefinition Width="Auto"/>
                <!-- Kolom 1: Untuk Konten. Lebar "stretch" (*) -->
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <components:ProfileNavbar x:Name="SideNavBar" Grid.Column="0" 
                                      VerticalAlignment="Top" />

            <ContentControl x:Name="MainContent" Grid.Column="1"
                            HorizontalAlignment="Stretch" 
                            VerticalAlignment="Stretch"
                            Margin="40,0,0,0"/>
        </Grid>
    </Grid>
</Page>