<Page x:Class="ShipMank_WPF.Pages.Profile"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:ShipMank_WPF.Pages"
      xmlns:components="clr-namespace:ShipMank_WPF.Components"
      Title="Profile" Background="Transparent">

    <Grid>
        <!-- 1. AREA UTAMA (Yang akan di-blur) -->
        <!-- Beri nama x:Name agar bisa diakses di C# untuk diberi efek blur -->
        <Grid x:Name="MainProfileContent">
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#FFF9AF" Offset="0"/>
                    <GradientStop Color="#EBF1F5" Offset="0.5"/>
                </LinearGradientBrush>
            </Grid.Background>

            <Grid Margin="40">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <components:ProfileNavbar x:Name="SideNavBar" Grid.Column="0" 
                                          VerticalAlignment="Top" />

                <ContentControl x:Name="MainContent" Grid.Column="1"
                                HorizontalAlignment="Stretch" 
                                VerticalAlignment="Stretch"
                                Margin="40,0,0,0"/>
            </Grid>
        </Grid>

        <!-- 2. POPUP OVERLAY (Pindahan dari SettingsControl) -->
        <!-- Visibility Default Collapsed -->
        <Grid x:Name="DeleteConfirmationOverlay" Visibility="Collapsed">

            <!-- Background Dimmer (Gelap) -->
            <Border Background="#AA000000" MouseDown="CancelDelete_Click"/>

            <!-- Card Popup -->
            <Border Background="White" CornerRadius="16" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="30" MaxWidth="420" Width="400">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.3"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="⚠️" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,15"/>
                    <TextBlock Text="Delete Account?" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Foreground="#111827"/>
                    <TextBlock Text="Are you sure you want to delete this account? This action cannot be undone." 
                               FontSize="15" Foreground="#6B7280" TextAlignment="Center" TextWrapping="Wrap" 
                               Margin="0,10,0,30" LineHeight="24"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Tombol Cancel -->
                        <Button Grid.Column="0" Content="Cancel" Click="CancelDelete_Click"
                                FontSize="16" FontWeight="SemiBold" Foreground="#374151" Background="#F3F4F6" Height="45" BorderThickness="0" Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="10">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <!-- Tombol Delete -->
                        <Button Grid.Column="2" Content="Delete" Click="ConfirmDelete_Click"
                                FontSize="16" FontWeight="SemiBold" Foreground="White" Background="#EF4444" Height="45" BorderThickness="0" Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="10">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </Grid>
                </StackPanel>
            </Border>
        </Grid>

    </Grid>
</Page>