<Page x:Class="ShipMank_WPF.Pages.DetailKapal"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
      xmlns:sys="clr-namespace:System;assembly=mscorlib"
      mc:Ignorable="d" 
      Title="DetailKapal"
      Background="Transparent">

    <Grid>
        <Border HorizontalAlignment="Center" 
                VerticalAlignment="Center"
                Background="White"
                CornerRadius="15"
                Margin="20"
                Width="850" Height="520">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="5" BlurRadius="20" Color="Black" Opacity="0.4"/>
            </Border.Effect>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2.5*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">
                    <Border CornerRadius="15,0,0,15" ClipToBounds="True" Background="#F0F0F0">
                        <Grid>
                            <Image x:Name="MainImage" 
                                   Source="/Assets/hero2.jpg" 
                                   Stretch="UniformToFill"/>

                            <Border VerticalAlignment="Bottom" Height="80">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                        <GradientStop Color="Transparent" Offset="0"/>
                                        <GradientStop Color="#99000000" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                            </Border>

                            <Button HorizontalAlignment="Left" VerticalAlignment="Center" Margin="15"
                                    Click="PrevImage_Click"
                                    Foreground="White" Width="45" Height="45">
                                <Border Background="#66000000" CornerRadius="25" Width="40" Height="40">
                                    <iconPacks:PackIconMaterial Kind="ChevronLeft" Width="24" Height="24" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                </Border>
                            </Button>

                            <Button HorizontalAlignment="Right" VerticalAlignment="Center" Margin="15"
                                    Click="NextImage_Click"
                                    Foreground="White" Width="45" Height="45">
                                <Border Background="#66000000" CornerRadius="25" Width="40" Height="40">
                                    <iconPacks:PackIconMaterial Kind="ChevronRight" Width="24" Height="24" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                </Border>
                            </Button>
                        </Grid>
                    </Border>
                </Grid>

                <Grid Grid.Column="1" Margin="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" 
                            Background="#33A1E0" 
                            CornerRadius="0,15,0,0"
                            Padding="15">
                        <Grid>
                            <TextBlock Text="{Binding ShipInfo.ShipName, FallbackValue='Kapal Babe Asep'}"
                                       Foreground="Black"
                                       FontSize="24"
                                       FontWeight="Bold"
                                       HorizontalAlignment="Center"
                                       TextTrimming="CharacterEllipsis"/>

                            <Button Click="CloseButton_Click"
                                    Padding="0" Width="30" Height="30" 
                                    HorizontalAlignment="Right" VerticalAlignment="Top"
                                    Foreground="Black" Opacity="0.7">
                                <iconPacks:PackIconMaterial Kind="Close" Width="20" Height="20"/>
                            </Button>
                        </Grid>
                    </Border>

                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="25,20,25,10">
                        <StackPanel>

                            <Grid Margin="0,0,0,20">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                    <iconPacks:PackIconMaterial Kind="Star" Foreground="#F1C40F" Width="16" Height="16" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                    <TextBlock Text="{Binding ShipInfo.Rating, FallbackValue='4.8'}" FontWeight="Bold" FontSize="16" VerticalAlignment="Center" Foreground="#333"/>
                                    <TextBlock Text="/5.0" FontSize="12" Foreground="#999" VerticalAlignment="Bottom" Margin="2,0,0,2"/>
                                </StackPanel>

                                <Border HorizontalAlignment="Right" CornerRadius="4" Padding="10,4" VerticalAlignment="Center">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Background" Value="#E8F5E9"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding ShipInfo.KapalStatus}" Value="Unavailable">
                                                    <Setter Property="Background" Value="#FFEBEE"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <TextBlock x:Name="StatusTextBlock" Text="{Binding ShipInfo.KapalStatus, FallbackValue='Available'}" 
                                               FontSize="12" FontWeight="SemiBold">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="#27AE60"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding ShipInfo.KapalStatus}" Value="Unavailable">
                                                        <Setter Property="Foreground" Value="#C0392B"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Border>
                            </Grid>

                            <Grid Margin="0,0,0,20">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <iconPacks:PackIconMaterial Grid.Row="0" Kind="SailBoat" Width="16" Height="16" Foreground="#7F8C8D" Margin="0,0,15,15" VerticalAlignment="Center"/>
                                <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" Margin="0,0,0,15" VerticalAlignment="Center">
                                    <TextBlock Text="Type: " FontSize="13" Foreground="#7F8C8D"/>
                                    <TextBlock Text="{Binding ShipInfo.ShipClass, FallbackValue='Phinisi'}" FontSize="13" FontWeight="SemiBold" Foreground="#2C3E50"/>
                                </StackPanel>

                                <iconPacks:PackIconMaterial Grid.Row="1" Kind="AccountGroup" Width="16" Height="16" Foreground="#7F8C8D" Margin="0,0,15,15" VerticalAlignment="Center"/>
                                <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" Margin="0,0,0,15" VerticalAlignment="Center">
                                    <TextBlock Text="Capacity: " FontSize="13" Foreground="#7F8C8D"/>
                                    <TextBlock Text="{Binding ShipInfo.Capacity, FallbackValue='12 Pax'}" FontSize="13" FontWeight="SemiBold" Foreground="#2C3E50"/>
                                </StackPanel>

                                <iconPacks:PackIconMaterial Grid.Row="2" Kind="Tag" Width="16" Height="16" Foreground="#7F8C8D" Margin="0,0,15,15" VerticalAlignment="Center"/>
                                <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" Margin="0,0,0,15" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding ShipInfo.Price, FallbackValue='Rp 15.000.000'}" FontSize="16" FontWeight="Bold" Foreground="#2980B9"/>
                                    <TextBlock Text="{Binding ShipInfo.PriceUnit, FallbackValue='/day'}" FontSize="12" Foreground="#95A5A6" VerticalAlignment="Bottom" Margin="4,0,0,2"/>
                                </StackPanel>

                                <iconPacks:PackIconMaterial Grid.Row="3" Kind="MapMarker" Width="16" Height="16" Foreground="#E74C3C" Margin="0,2,15,0" VerticalAlignment="Top"/>
                                <TextBlock Grid.Row="3" Grid.Column="1" 
                                           Text="{Binding ShipInfo.FullLocation, FallbackValue='Jl. Pelabuhan Labuan Bajo No. 1, Nusa Tenggara Timur, Indonesia'}" 
                                           FontSize="13" FontWeight="SemiBold" Foreground="#34495E" 
                                           TextWrapping="Wrap" LineHeight="18" Margin="0,0,0,20"/>

                                <iconPacks:PackIconMaterial Grid.Row="5" Kind="CalendarRange" Width="16" Height="16" Foreground="#7F8C8D" Margin="0,0,15,0" VerticalAlignment="Center"/>
                                <Grid Grid.Row="5" Grid.Column="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Date: " FontSize="13" Foreground="#7F8C8D" VerticalAlignment="Center"/>
                                    <DatePicker x:Name="BookingDatePicker" Grid.Column="1" SelectedDate="{x:Static sys:DateTime.Now}"
                                                BorderBrush="#BDC3C7" BorderThickness="0,0,0,1"
                                                Padding="5,2" Margin="5,0,0,0"
                                                FontSize="13"
                                                HorizontalAlignment="Stretch"/>
                                </Grid>
                            </Grid>

                            <Separator Background="#ECF0F1" Margin="0,10,0,15"/>

                            <TextBlock Text="Facilities" FontSize="12" FontWeight="Bold" Foreground="#2C3E50" Margin="0,0,0,10" HorizontalAlignment="Center"/>
                            <ItemsControl ItemsSource="{Binding ShipInfo.Facilities}" HorizontalAlignment="Center">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel HorizontalAlignment="Center"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border CornerRadius="15" Margin="4">
                                            <Border.Background>
                                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                    <GradientStop Color="#F6C945" Offset="0"/>
                                                    <GradientStop Color="#FFF9AF" Offset="1"/>
                                                </LinearGradientBrush>
                                            </Border.Background>
                                            <TextBlock Text="{Binding}"
                                                       Foreground="Black"
                                                       FontWeight="SemiBold"
                                                       Padding="12,6"
                                                       FontSize="12"/>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                        </StackPanel>
                    </ScrollViewer>

                    <StackPanel Grid.Row="2" Margin="25,0,25,25">
                        <TextBlock Text="Sorry, this boat is not available on this date"
                                   Foreground="#E74C3C" FontSize="12" HorizontalAlignment="Center" Margin="0,0,0,8">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ShipInfo.KapalStatus}" Value="Unavailable">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>

                        <Button x:Name="BookNowButton"
                                Click="BookNowButton_Click"
                                HorizontalAlignment="Stretch"
                                Foreground="White"
                                FontSize="16"
                                FontWeight="Bold"
                                BorderThickness="0"
                                Padding="10,8"
                                Cursor="Hand">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="8"/>
                                </Style>
                            </Button.Resources>
                            <Button.Effect>
                                <DropShadowEffect ShadowDepth="2" BlurRadius="8" Color="#3498DB" Opacity="0.4"/>
                            </Button.Effect>
                            <Button.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#154D71" Offset="0.197"/>
                                    <GradientStop Color="#33A1E0" Offset="1"/>
                                </LinearGradientBrush>
                            </Button.Background>
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="8">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ShipInfo.KapalStatus}" Value="Unavailable">
                                            <Setter Property="IsEnabled" Value="False"/>
                                            <Setter Property="Opacity" Value="0.6"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <TextBlock Text="Book Now"/>
                        </Button>
                    </StackPanel>

                </Grid>
            </Grid>
        </Border>
    </Grid>
</Page>