<Page x:Class="ShipMank_WPF.Pages.DetailKapal"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ShipMank_WPF.Pages"
      xmlns:sys="clr-namespace:System;assembly=mscorlib"
      xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
      mc:Ignorable="d" 
      Title="DetailKapal"
      Background="Transparent">

    <Grid>
        <Border HorizontalAlignment="Center" 
                VerticalAlignment="Center"
                Background="White"
                CornerRadius="20"
                Margin="20"
                MaxWidth="650">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="2" BlurRadius="15" Color="Black" Opacity="0.2"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- 1. Header Biru -->
                <Border Grid.Row="0" 
                        Background="#33A1E0" 
                        CornerRadius="20,20,0,0"
                        Padding="15">
                    <TextBlock Text="Kapal Babe Asep"
                               Foreground="Black"
                               FontSize="24"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"/>
                </Border>

                <!-- 2. Konten Utama -->
                <StackPanel Grid.Row="1" Margin="25">

                    <!-- Grid Info & Harga -->
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Info Kiri -->
                        <StackPanel Grid.Column="0" VerticalAlignment="Top">

                            <!-- Lokasi (Ganti Emoji dengan Icon MapMarker) -->
                            <StackPanel Margin="0,0,0,15">
                                <StackPanel Orientation="Horizontal" Opacity="0.7">
                                    <iconPacks:PackIconMaterial Kind="MapMarker" Width="14" Height="14" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                    <TextBlock Text="Location" FontSize="14" VerticalAlignment="Center"/>
                                </StackPanel>
                                <TextBlock Text="Jakarta, Pulau Seribu" FontSize="18" FontWeight="Bold" Margin="22,0,0,0"/>
                            </StackPanel>

                            <!-- Tipe (Ganti Emoji dengan Icon SailBoat) -->
                            <StackPanel Margin="0,0,0,15">
                                <StackPanel Orientation="Horizontal" Opacity="0.7">
                                    <iconPacks:PackIconMaterial Kind="SailBoat" Width="14" Height="14" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                    <TextBlock Text="Type" FontSize="14" VerticalAlignment="Center"/>
                                </StackPanel>
                                <TextBlock Text="Speedboat" FontSize="18" FontWeight="Bold" Margin="22,0,0,0"/>
                            </StackPanel>

                            <!-- Tanggal (Ganti Emoji dengan Icon CalendarRange) -->
                            <StackPanel Margin="0,0,0,5">
                                <StackPanel Orientation="Horizontal" Opacity="0.7">
                                    <iconPacks:PackIconMaterial Kind="CalendarRange" Width="14" Height="14" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                    <TextBlock Text="Select Date" FontSize="14" VerticalAlignment="Center"/>
                                </StackPanel>
                                <DatePicker SelectedDate="2025-10-10"
                                            DisplayDateStart="2025-01-01"
                                            FontSize="16" 
                                            Margin="22,5,0,0"
                                            BorderThickness="0,0,0,1"
                                            Padding="5,2"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Harga Kanan -->
                        <StackPanel Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Top">
                            <TextBlock Text="Rp 450.000" FontSize="28" FontWeight="Bold" Foreground="#111"/>
                            <TextBlock Text="IDR / Day" FontSize="14" Opacity="0.7" HorizontalAlignment="Right"/>
                        </StackPanel>
                    </Grid>

                    <!-- Alert Message -->
                    <TextBlock Text="Sorry, this boat is not available on this date"
                               Foreground="#E74C3C"
                               FontSize="13"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,20">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding KapalStatus}" Value="Unavailable">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>

                    <!-- Fasilitas (Tags) -->
                    <ItemsControl Margin="0,0,0,30" HorizontalAlignment="Center">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border CornerRadius="15" Margin="5">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#F6C945" Offset="0"/>
                                            <GradientStop Color="#FFF9AF" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Border.Background>
                                    <TextBlock Text="{Binding}"
                                               Foreground="Black"
                                               FontWeight="SemiBold"
                                               Padding="12,6"
                                               FontSize="13"/>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>

                        <sys:String>Captain Included</sys:String>
                        <sys:String>Snorkeling Gear</sys:String>
                        <sys:String>WiFi</sys:String>
                        <sys:String>Kitchen</sys:String>
                        <sys:String>Full Bar</sys:String>
                        <sys:String>Swimming Pool</sys:String>
                        <sys:String>Gym</sys:String>
                        <sys:String>Dining Area</sys:String>
                    </ItemsControl>

                    <!-- Tombol Book Now -->
                    <Button Content="Book Now"
                            HorizontalAlignment="Center"
                            Foreground="White"
                            FontSize="16"
                            FontWeight="Bold"
                            BorderThickness="0"
                            Padding="10,6">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="8"/>
                            </Style>
                        </Button.Resources>
                        <Button.Effect>
                            <DropShadowEffect ShadowDepth="1" BlurRadius="5" Color="#3498DB" Opacity="0.5"/>
                        </Button.Effect>
                        <Button.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#154D71" Offset="0.197"/>
                                <GradientStop Color="#33A1E0" Offset="1"/>
                            </LinearGradientBrush>
                        </Button.Background>
                    </Button>

                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>