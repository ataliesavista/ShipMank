<Page x:Class="ShipMank_WPF.Pages.SignUp"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d"
      Title="SignUp"
      Background="Transparent">

    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="Transparent">

        <Rectangle Fill="#EBF1F5"/>

        <Border 
            Background="#F2F8FF"
            CornerRadius="15"
            Padding="30"
            Width="400"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            RenderTransformOrigin="0.5,0.5">

            <Border.Effect>
                <DropShadowEffect BlurRadius="2"
                                  ShadowDepth="4"
                                  Opacity="0.4"
                                  Direction="270"/>
            </Border.Effect>

            <StackPanel>
                <TextBlock Text="Sign Up" 
                           FontSize="28" 
                           FontWeight="Bold" 
                           Foreground="#000000"
                           HorizontalAlignment="Center"
                           Margin="0 0 0 20"/>

                <TextBlock Text="Username"
                           FontWeight="SemiBold"
                           Foreground="#000000"/>

                <Border Height="35"
                        Margin="0 5 0 15"
                        Background="#33A1E0"
                        Opacity="0.35"
                        Padding="5"
                        CornerRadius="8">
                    <TextBox Name="tbUsername"
                             FontFamily="Dubai"
                             Background="Transparent"
                             BorderThickness="0"
                             VerticalContentAlignment="Center"/>
                </Border>

                <TextBlock Text="Email"
                           FontWeight="SemiBold"
                           Foreground="#000000"/>

                <Border Height="35"
                        Margin="0 5 0 15"
                        Background="#33A1E0"
                        Opacity="0.35"
                        Padding="5"
                        CornerRadius="8">
                    <TextBox Name="tbEmail"
                             FontFamily="Dubai"
                             Background="Transparent"
                             BorderThickness="0"
                             VerticalContentAlignment="Center"/>
                </Border>

                <TextBlock Text="Password"
                           FontWeight="SemiBold"
                           Foreground="#000000"/>

                <Border Height="35"
                        Margin="0 5 0 20"
                        Background="#33A1E0"
                        Opacity="0.35"
                        Padding="5"
                        CornerRadius="8">
                    <PasswordBox Name="tbPassword"
                                 FontFamily="Dubai"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 VerticalContentAlignment="Center"/>
                </Border>

                <StackPanel Orientation="Horizontal"
            HorizontalAlignment="Center"
            Margin="0 5 0 0">

                    <StackPanel.Resources>
                        <Style TargetType="Button">
                            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                            <Setter Property="RenderTransform">
                                <Setter.Value>
                                    <TranslateTransform X="0"/>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                                            <Border.Effect>
                                                <DropShadowEffect Color="Gray" Opacity="0.2" ShadowDepth="1"/>
                                            </Border.Effect>
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Trigger.EnterActions>
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)" To="3" Duration="0:0:0.2"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </Trigger.EnterActions>
                                                <Trigger.ExitActions>
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)" To="0" Duration="0:0:0.2"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </Trigger.ExitActions>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </StackPanel.Resources>

                    <Button Content="Google"
            Height="25"
            Background="#FFFFFF"
            FontFamily="Dubai"
            FontWeight="SemiBold"
            Cursor="Hand"
            Width="100"
            BorderThickness="0"
            Click="GoogleSignUp_Click"/>

                    <Button Content="Daftar"
            Height="25"
            Background="#FFF9AF"
            FontFamily="Dubai"
            FontWeight="SemiBold"
            Cursor="Hand"
            Width="100"
            BorderThickness="0"
            Margin="10 0 0 0"
            Click="SignUpButton_Click"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Center"
                            Margin="0 15 0 0">
                    <TextBlock Text="Sudah punya akun? "
                               FontFamily="Dubai"
                               Foreground="#555"/>
                    <TextBlock Text="Masuk"
                               FontFamily="Dubai"
                               Foreground="#33A1E0"
                               FontWeight="Bold"
                               Cursor="Hand"
                               MouseDown="LoginText_MouseDown" 
                               TextDecorations="Underline"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Page>