<Window x:Class="ShipMank_WPF.Pages.PaymentResult"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Instruksi Pembayaran" Height="400" Width="350"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize" WindowStyle="None">

    <Border Background="White" BorderBrush="#33A1E0" BorderThickness="2" CornerRadius="10">
        <StackPanel Margin="20" VerticalAlignment="Center">
            <TextBlock Text="Menunggu Pembayaran" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Foreground="#333"/>
            <TextBlock Text="Booking Berhasil Dibuat!" FontSize="12" Foreground="Green" HorizontalAlignment="Center" Margin="0,5,0,10"/>

            <Separator Margin="0,10"/>

            <TextBlock Text="Silakan transfer ke Nomor Virtual Account:" HorizontalAlignment="Center" Foreground="Gray" TextWrapping="Wrap" TextAlignment="Center"/>

            <TextBlock x:Name="TxtBank" Text="BANK BCA" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,15,0,5" Foreground="#333"/>

            <TextBox x:Name="TxtVA" Text="Loading..." FontSize="26" FontWeight="Bold" HorizontalAlignment="Center" 
                     BorderThickness="0" IsReadOnly="True" Background="Transparent" Foreground="#33A1E0" Cursor="IBeam"/>

            <TextBlock Text="Total Tagihan:" HorizontalAlignment="Center" Margin="0,20,0,5" Foreground="Gray"/>
            <TextBlock x:Name="TxtAmount" Text="Rp 0" FontSize="18" FontWeight="SemiBold" HorizontalAlignment="Center" Foreground="#333"/>

            <TextBlock Text="Segera lakukan pembayaran melalui Simulator Midtrans." 
                       FontSize="11" Foreground="#E74C3C" HorizontalAlignment="Center" Margin="0,20,0,0" TextWrapping="Wrap" TextAlignment="Center"/>

            <Button Content="Selesai &amp; Tutup" Margin="0,20,0,0" Height="40" Background="#33A1E0" Foreground="White" 
                    Click="CloseButton_Click" Cursor="Hand">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>
        </StackPanel>
    </Border>
</Window>