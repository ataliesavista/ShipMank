<Page x:Class="ShipMank_WPF.Pages.BeliTiket"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ShipMank_WPF.Pages"
      xmlns:components="clr-namespace:ShipMank_WPF.Components"
      xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="BeliTiket">

    <Page.Resources>

        <!-- Style untuk Inputan Filter (Tinggi & Rounded) -->
        <Style x:Key="FilterInputStyle" TargetType="Control">
            <Setter Property="Height" Value="45"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Control">
                        <Border Background="{TemplateBinding Background}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="{TemplateBinding Padding}" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style khusus untuk ComboBox agar seragam -->
        <Style x:Key="FilterComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Height" Value="45"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Border Background="{TemplateBinding Background}" CornerRadius="8">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="30"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Content -->
                                    <ContentPresenter IsHitTestVisible="False" Content="{TemplateBinding SelectionBoxItem}"
                                                      VerticalAlignment="Center" Margin="10,0,0,0"/>

                                    <!-- Arrow Icon -->
                                    <ToggleButton Grid.Column="1" Background="Transparent" BorderThickness="0" 
                                                  IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                                  ClickMode="Press">
                                        <ToggleButton.Template>
                                            <ControlTemplate TargetType="ToggleButton">
                                                <Border Background="Transparent">
                                                    <iconPacks:PackIconMaterial Kind="ChevronDown" Width="10" Height="10" Foreground="#555" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </ToggleButton.Template>
                                    </ToggleButton>
                                </Grid>
                            </Border>

                            <!-- Dropdown Popup -->
                            <Popup Name="Popup" Placement="Bottom" IsOpen="{TemplateBinding IsDropDownOpen}" AllowsTransparency="True" Focusable="False" PopupAnimation="Slide">
                                <Grid Name="DropDown" SnapsToDevicePixels="True" MinWidth="{TemplateBinding ActualWidth}" MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                    <Border x:Name="DropDownBorder" Background="White" BorderThickness="1" BorderBrush="#DDD" CornerRadius="5" Margin="0,5,0,0"/>
                                    <ScrollViewer Margin="4,6,4,6" SnapsToDevicePixels="True">
                                        <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained" />
                                    </ScrollViewer>
                                </Grid>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Page.Resources>

    <!-- Background Gradasi -->
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#FFF9AF" Offset="0"/>
                <GradientStop Color="#EBF1F5" Offset="0.5"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Row 0: Header -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="40,30,40,20">
            <Image Source="/Assets/logob.png" Height="32" Width="32" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBlock Text="Boat Rentals" FontSize="32" FontWeight="Bold" VerticalAlignment="Center"/>
        </StackPanel>

        <!-- Row 1: Filter Section -->
        <Border Grid.Row="1" Background="#F6C945" CornerRadius="15" Padding="25" Margin="40,0,40,20">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="2" BlurRadius="10" Opacity="0.1"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Baris 1: Search, Location, Type -->
                    <RowDefinition Height="20"/>
                    <!-- Spacer -->
                    <RowDefinition Height="Auto"/>
                    <!-- Baris 2: Capacity, Rate, Price -->
                </Grid.RowDefinitions>

                <!-- === BARIS 1 === -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- 1. Search -->
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Search" FontWeight="Bold" Foreground="#333" Margin="0,0,0,8"/>
                        <TextBox x:Name="SearchBoatNameTextBox" Style="{StaticResource FilterInputStyle}" 
                                 Tag="Search boat name..." 
                                 TextChanged="TextBox_TextChanged"
                                 GotFocus="TextBox_GotFocus"
                                 LostFocus="TextBox_LostFocus"/>
                    </StackPanel>

                    <!-- 2. Location -->
                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Location" FontWeight="Bold" Foreground="#333" Margin="0,0,0,8"/>
                        <TextBox x:Name="LocationTextBox" Style="{StaticResource FilterInputStyle}"
                                 Tag="e.g. Bali, Jakarta"
                                 TextChanged="TextBox_TextChanged"
                                 GotFocus="TextBox_GotFocus"
                                 LostFocus="TextBox_LostFocus"/>
                    </StackPanel>

                    <!-- 3. Type (Dengan Tombol Reset) -->
                    <StackPanel Grid.Column="4">
                        <!-- Header Type + Reset Button -->
                        <Grid Margin="0,0,0,8">
                            <TextBlock Text="Type" FontWeight="Bold" Foreground="#333" VerticalAlignment="Center" HorizontalAlignment="Left"/>

                            <!-- DITAMBAHKAN: Tombol Reset -->
                            <Button x:Name="ResetFilterButton"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    Cursor="Hand"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    ToolTip="Reset All Filters"
                                    Click="ResetFilterButton_Click">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Reset" FontSize="11" FontWeight="SemiBold" Foreground="#333" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                    <iconPacks:PackIconMaterial Kind="Undo" Width="12" Height="12" Foreground="#333" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </Grid>

                        <ComboBox x:Name="TypeComboBox" Style="{StaticResource FilterComboBoxStyle}">
                            <ComboBoxItem Content="All Types" IsSelected="True"/>
                            <ComboBoxItem Content="Speedboat"/>
                            <ComboBoxItem Content="Yacht"/>
                            <ComboBoxItem Content="Phinisi"/>
                            <ComboBoxItem Content="Ferry"/>
                        </ComboBox>
                    </StackPanel>
                </Grid>

                <!-- === BARIS 2 === -->
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- 4. Capacity -->
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Capacity" FontWeight="Bold" Foreground="#333" Margin="0,0,0,8"/>
                        <ComboBox x:Name="CapacityComboBox" Style="{StaticResource FilterComboBoxStyle}" IsEditable="True" Text="Any">
                            <ComboBoxItem Content="Any"/>
                            <ComboBoxItem Content="2 - 5 People"/>
                            <ComboBoxItem Content="5 - 10 People"/>
                            <ComboBoxItem Content="10+ People"/>
                        </ComboBox>
                    </StackPanel>

                    <!-- 5. Rate -->
                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Rate" FontWeight="Bold" Foreground="#333" Margin="0,0,0,8"/>
                        <Grid>
                            <ComboBox x:Name="RateComboBox" Style="{StaticResource FilterComboBoxStyle}">
                                <ComboBoxItem Content="Any" IsSelected="True"/>
                                <ComboBoxItem Content="5"/>
                                <ComboBoxItem Content="4"/>
                                <ComboBoxItem Content="3"/>
                            </ComboBox>

                            <!-- Icon Star Overlay -->
                            <iconPacks:PackIconMaterial Kind="Star" 
                                                        HorizontalAlignment="Right" VerticalAlignment="Center" 
                                                        Margin="0,0,35,0" Foreground="#F39C12"
                                                        IsHitTestVisible="False"/>
                        </Grid>
                    </StackPanel>

                    <!-- 6. Max Price -->
                    <StackPanel Grid.Column="4">
                        <TextBlock Text="Max Price" FontWeight="Bold" Foreground="#333" Margin="0,0,0,8"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="100"/>
                            </Grid.ColumnDefinitions>

                            <!-- Slider -->
                            <Slider x:Name="PriceSlider" 
                                    Grid.Column="0"
                                    Minimum="0" 
                                    Maximum="20000000" 
                                    Value="10000000"
                                    TickPlacement="None"
                                    VerticalAlignment="Center"
                                    IsSnapToTickEnabled="True"
                                    TickFrequency="500000"/>

                            <!-- Input Box (Binding to Slider) -->
                            <Border Grid.Column="2" Background="White" CornerRadius="8" Height="45">
                                <TextBox Text="{Binding ElementName=PriceSlider, Path=Value, UpdateSourceTrigger=PropertyChanged, StringFormat=N0}"
                                         BorderThickness="0"
                                         VerticalContentAlignment="Center"
                                         HorizontalContentAlignment="Center"
                                         FontWeight="SemiBold"
                                         FontSize="13"
                                         Background="Transparent"/>
                            </Border>
                        </Grid>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>

        <!-- Row 2: Content Grid -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <UniformGrid x:Name="ShipCardGrid"
                         Margin="40,10,40,20" 
                         Rows="2" 
                         Columns="3" 
                         HorizontalAlignment="Stretch">
                <!-- Kartu akan diisi oleh C# -->
            </UniformGrid>
        </ScrollViewer>
    </Grid>
</Page>