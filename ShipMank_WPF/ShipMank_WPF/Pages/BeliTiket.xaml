<Page x:Class="ShipMank_WPF.Pages.BeliTiket"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ShipMank_WPF.Pages"
      xmlns:components="clr-namespace:ShipMank_WPF.Components"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="BeliTiket">


    <Page.Resources>
        <!-- Style kamu tetap sama... -->
        <!-- Style untuk Tombol Biru (Book Ticket) -->
        <Style TargetType="Button" x:Key="PrimaryButton">
            <Setter Property="Background" Value="#1570A6"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style dasar untuk input -->
        <Style x:Key="SearchInputStyleBase">
            <Setter Property="Control.Background" Value="White"/>
            <Setter Property="Control.BorderBrush" Value="#4B5563"/>
            <Setter Property="Control.BorderThickness" Value="1.5"/>
            <Setter Property="Control.Padding" Value="10,8"/>
            <Setter Property="Control.FontWeight" Value="SemiBold"/>
            <Setter Property="Control.VerticalContentAlignment" Value="Center"/>
        </Style>

        <!-- Style untuk Tombol Panah Dropdown ComboBox -->
        <Style x:Key="ComboBoxToggleButton" TargetType="ToggleButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Grid Background="Transparent">
                            <TextBlock Text="&#xE70D;" 
                                       FontFamily="Segoe UI Fluent Icons" 
                                       FontSize="12" 
                                       VerticalAlignment="Center" 
                                       HorizontalAlignment="Center"
                                       Foreground="#4B5563"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Template untuk ComboBox -->
        <Style TargetType="ComboBox" BasedOn="{StaticResource SearchInputStyleBase}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="8"
                                    x:Name="MainBorder">
                                <Grid>
                                    <ContentPresenter IsHitTestVisible="False"
                                                      Margin="8,0"
                                                      Content="{TemplateBinding SelectionBoxItem}"
                                                      VerticalAlignment="Center"/>
                                    <TextBox x:Name="PART_EditableTextBox"
                                             Visibility="Collapsed"
                                             IsReadOnly="{TemplateBinding IsReadOnly}"
                                             Style="{x:Null}" 
                                             Template="{x:Null}"
                                             Background="Transparent"
                                             BorderThickness="0"
                                             Padding="8,0"
                                             VerticalContentAlignment="Center"
                                             Text="{Binding Text, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                    <ToggleButton Grid.Column="1" 
                                                  Focusable="False" 
                                                  IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}" 
                                                  Style="{StaticResource ComboBoxToggleButton}"
                                                  HorizontalAlignment="Right"
                                                  Margin="0,0,5,0"/>
                                </Grid>
                            </Border>
                            <Popup x:Name="Popup" 
                                   Placement="Bottom" 
                                   IsOpen="{TemplateBinding IsDropDownOpen}" 
                                   AllowsTransparency="True" 
                                   Focusable="False" 
                                   PopupAnimation="Slide">
                                <Grid Name="DropDown" 
                                      SnapsToDevicePixels="True" 
                                      MinWidth="{TemplateBinding ActualWidth}" 
                                      MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                    <Border x:Name="DropDownBorder" 
                                            Background="White" 
                                            BorderThickness="1" 
                                            BorderBrush="#888" 
                                            CornerRadius="5"/>
                                    <ScrollViewer Margin="4,6,4,6" SnapsToDevicePixels="True">
                                        <ItemsPresenter KeyboardNavigation.DirectionalNavigation="Contained" />
                                    </ScrollViewer>
                                </Grid>
                            </Popup>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="MainBorder" Property="BorderBrush" Value="#1E90FF"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="MainBorder" Property="BorderBrush" Value="#1E90FF"/>
                                <Setter TargetName="MainBorder" Property="BorderThickness" Value="2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Template sederhana untuk DatePicker -->
        <Style TargetType="DatePicker" BasedOn="{StaticResource SearchInputStyleBase}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DatePicker">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                x:Name="MainBorder">
                            <Grid>
                                <DatePickerTextBox x:Name="PART_TextBox"
                                                   Text="{Binding Path=SelectedDate, StringFormat='dd/MM/yyyy', RelativeSource={RelativeSource TemplatedParent}}"
                                                   BorderThickness="0"
                                                   Background="Transparent"
                                                   VerticalContentAlignment="Center"
                                                   Padding="5,0,0,0"
                                                   Margin="3,0"/>
                                <Button x:Name="PART_Button" 
                                        Grid.Column="1" 
                                        Foreground="{TemplateBinding BorderBrush}" 
                                        Focusable="False" 
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Center"
                                        Margin="0,0,5,0"
                                        Style="{x:Null}">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Grid Background="Transparent">
                                                <TextBlock Text="&#xE787;" 
                                                           FontFamily="Segoe UI Fluent Icons" 
                                                           FontSize="14" 
                                                           VerticalAlignment="Center" 
                                                           HorizontalAlignment="Center"
                                                           Foreground="#4B5563"/>
                                            </Grid>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="MainBorder" Property="BorderBrush" Value="#1E90FF"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="MainBorder" Property="BorderBrush" Value="#1E90FF"/>
                                <Setter TargetName="MainBorder" Property="BorderThickness" Value="2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Template sederhana untuk TextBox -->
        <Style TargetType="TextBox" BasedOn="{StaticResource SearchInputStyleBase}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                x:Name="MainBorder">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                          SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" 
                                          Margin="8,0" 
                                          VerticalAlignment="Center" 
                                          HorizontalAlignment="Left" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="MainBorder" Property="BorderBrush" Value="#1E90FF"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="MainBorder" Property="BorderBrush" Value="#1E90FF"/>
                                <Setter TargetName="MainBorder" Property="BorderThickness" Value="2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style sederhana untuk Tombol Tukar (Swap) -->
        <Style TargetType="Button" x:Key="SwapButton">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#4B5563"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="20">
                            <TextBlock Text="&#xE8AB;" 
                                       FontFamily="Segoe UI Fluent Icons" 
                                       FontSize="16" 
                                       VerticalAlignment="Center" 
                                       HorizontalAlignment="Center"
                                       Foreground="#4B5563"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="#1E90FF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Page.Resources>

    <!-- 🌈 Background gradasi dari atas (#FFF9AF) ke bawah (#EBF1F5) -->
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#FFF9AF" Offset="0"/>
                <GradientStop Color="#EBF1F5" Offset="0.5"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ======= Konten kamu tetap sama ======= -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="40,30,40,20">
            <Image Source="/Assets/logob.png" Height="32" Width="32" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBlock Text="Boat Rentals" FontSize="32" FontWeight="Bold" VerticalAlignment="Center"/>
        </StackPanel>

        <Border Grid.Row="1" Background="#F6C945" CornerRadius="10" Padding="20" Margin="40,0,40,20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,20,20">
                        <TextBlock Text="Search" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <!-- DIUBAH: Menghapus Text="", menambah event -->
                        <TextBox x:Name="SearchBoatNameTextBox" 
                                 Background="White" 
                                 BorderThickness="0" 
                                 Padding="10"
                                 TextChanged="TextBox_TextChanged"
                                 GotFocus="TextBox_GotFocus"
                                 LostFocus="TextBox_LostFocus"
                                 />
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="0,0,20,20">
                        <TextBlock Text="Location" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <!-- DIUBAH: ComboBox menjadi TextBox -->
                        <TextBox x:Name="LocationTextBox" 
                                 Background="#FFFFFF" 
                                 BorderThickness="0" 
                                 Padding="10"
                                 TextChanged="TextBox_TextChanged"
                                 GotFocus="TextBox_GotFocus"
                                 LostFocus="TextBox_LostFocus"
                                 />
                    </StackPanel>

                    <StackPanel Grid.Column="2" Margin="0,0,0,20">
                        <TextBlock Text="Type" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <ComboBox x:Name="TypeComboBox" Background="#FFFFFF" BorderThickness="0" Padding="10">
                            <ComboBoxItem Content="All" IsSelected="True"/>
                            <ComboBoxItem Content="Boat"/>
                            <ComboBoxItem Content="Perahu"/>
                            <ComboBoxItem Content="Yacht"/>
                        </ComboBox>
                    </StackPanel>
                </Grid>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,20,0">
                        <TextBlock Text="Capacity" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <ComboBox x:Name="CapacityComboBox" Background="#FFFFFF" BorderThickness="0" Padding="10" 
                                  IsEditable="True" Text="20">
                            <ComboBoxItem Content="10"/>
                            <ComboBoxItem Content="20"/>
                            <ComboBoxItem Content="50"/>
                        </ComboBox>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="0,0,20,0">
                        <TextBlock Text="Rate" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <ComboBox x:Name="RateComboBox" Grid.Column="0" Background="#FFFFFF" BorderThickness="0" Padding="10" Width="80">
                                <ComboBoxItem Content="All" IsSelected="True"/>
                                <ComboBoxItem Content="1"/>
                                <ComboBoxItem Content="2"/>
                                <ComboBoxItem Content="3"/>
                                <ComboBoxItem Content="4"/>
                                <ComboBoxItem Content="5"/>
                            </ComboBox>
                            <TextBlock Grid.Column="1" Text="star" VerticalAlignment="Center" Margin="10,0,0,0"/>
                        </Grid>
                    </StackPanel>

                    <StackPanel Grid.Column="2" Margin="0,0,0,0">
                        <TextBlock Text="Max price" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Slider Grid.Column="0" 
                                    Minimum="100000" Maximum="10000000" 
                                    Value="10000000" 
                                    TickPlacement="None" 
                                    VerticalAlignment="Center"
                                    Margin="0,0,10,0"/>

                            <Border Grid.Column="1" 
                                    Background="White" 
                                    BorderThickness="0"
                                    Padding="5,5,5,5"
                                    CornerRadius="5"
                                    Width="100"
                                    HorizontalAlignment="Left">
                                <TextBlock Text="10.000.000" FontSize="12" FontWeight="SemiBold" Foreground="#1F2937"/>
                            </Border>
                        </Grid>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>

        <!-- Baris 2: Konten Hasil (Grid Kartu) -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <!-- DIUBAH: Memberi nama x:Name dan menghapus child -->
            <UniformGrid 
                x:Name="ShipCardGrid"
                Margin="40,10,20,20" 
                Rows="1" 
                Columns="3" 
                HorizontalAlignment="Stretch"
            >
                <!-- Kartu akan diisi oleh C# -->

            </UniformGrid>

        </ScrollViewer>
    </Grid>
</Page>