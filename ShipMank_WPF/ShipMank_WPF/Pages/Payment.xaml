<Page x:Class="ShipMank_WPF.Pages.Payment"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ShipMank_WPF.Pages"
      xmlns:components="clr-namespace:ShipMank_WPF.Components"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="Payment">
    <!-- Mengatur font default untuk tampilan yang lebih modern -->

    <Page.Resources>
        <!-- Style untuk kartu konten putih yang membulat -->
        <Style TargetType="Border" x:Key="ContentCard">
            <Setter Property="Background" Value="White" />
            <Setter Property="CornerRadius" Value="12" />
            <Setter Property="Padding" Value="25" />
            <Setter Property="Effect">
                <Setter.Value>
                    <!-- Menambahkan bayangan halus agar terlihat 'terangkat' -->
                    <DropShadowEffect ShadowDepth="1" BlurRadius="10" Color="#000000" Opacity="0.1" />
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style untuk header setiap bagian (cth: "Order Summary") -->
        <Style TargetType="TextBlock" x:Key="SectionHeader">
            <Setter Property="FontSize" Value="20" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Foreground" Value="#333" />
            <Setter Property="Margin" Value="0,0,0,15" />
        </Style>

        <!-- Style untuk TextBox input -->
        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="10" />
            <Setter Property="BorderBrush" Value="#DDD" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <!-- PART_ContentHost diperlukan agar TextBox berfungsi -->
                            <ScrollViewer x:Name="PART_ContentHost" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style untuk label di atas TextBox (cth: "Full Name") -->
        <Style TargetType="TextBlock" x:Key="InputLabel">
            <Setter Property="FontSize" Value="13" />
            <Setter Property="FontWeight" Value="Normal" />
            <Setter Property="Foreground" Value="#555" />
            <Setter Property="Margin" Value="0,0,0,5" />
        </Style>

        <!-- Style untuk opsi pembayaran (RadioButton) -->
        <Style TargetType="RadioButton" x:Key="PaymentOption">
            <Setter Property="GroupName" Value="PaymentMethod" />
            <Setter Property="Padding" Value="15" />
            <Setter Property="BorderBrush" Value="#DDD" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="PART_Border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <!-- ContentPresenter akan menampilkan konten di dalam RadioButton -->
                            <ContentPresenter />
                        </Border>
                        <!-- Trigger ini mengubah tampilan saat RadioButton dipilih -->
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="PART_Border" Property="BorderBrush" Value="#1FA7F1" />
                                <Setter TargetName="PART_Border" Property="BorderThickness" Value="2" />
                                <Setter TargetName="PART_Border" Property="Background" Value="#E9F7FF" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <!-- Latar belakang gradien diterapkan langsung ke Halaman -->
    <Page.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#FFF9AF" Offset="0"/>
            <GradientStop Color="#EBF1F5" Offset="0.5"/>
        </LinearGradientBrush>
    </Page.Background>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!-- Row 0: Header -->
            <RowDefinition Height="*" />
            <!-- Row 1: Main Content -->
            <RowDefinition Height="Auto" />
            <!-- Row 2: Footer Button -->
        </Grid.RowDefinitions>

        <!-- Row 0: Header -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="40,30,40,20">
            <!-- Ganti Source dengan path ke ikon 'jam' Anda -->
            <Image Source="/Assets/logob.png" Height="32" Width="32" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBlock Text="Payment" FontSize="32" FontWeight="Bold" VerticalAlignment="Center" Foreground="#333"/>
        </StackPanel>

        <!-- Row 1: Main Content Area (Tata Letak Baru) -->
        <ScrollViewer Grid.Row="1" Margin="40,0,40,0" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <!-- Row 0: Customer Details & Summary -->
                    <RowDefinition Height="Auto" />
                    <!-- Row 1: Payment Methods -->
                </Grid.RowDefinitions>

                <!-- Grid untuk bagian atas (2 kolom) -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!-- == BAGIAN KIRI: CUSTOMER DETAILS == -->
                    <Border Grid.Column="1" Style="{StaticResource ContentCard}" Margin="20,0,0,0">
                        <StackPanel>
                            <TextBlock Text="Customer Details" Style="{StaticResource SectionHeader}" FontWeight="Bold"  />
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <!-- Input Full Name -->
                                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                    <TextBlock Text="Full Name" Style="{StaticResource InputLabel}" />
                                    <TextBox x:Name="TxtFullName" ToolTip="Enter full name" />
                                </StackPanel>
                                <!-- Input Email -->
                                <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                    <TextBlock Text="Email" Style="{StaticResource InputLabel}" />
                                    <TextBox x:Name="TxtEmail" ToolTip="Enter email" />
                                </StackPanel>
                            </Grid>
                            <!-- Input Phone Number -->
                            <StackPanel Margin="0,15,0,0">
                                <TextBlock Text="Phone Number" Style="{StaticResource InputLabel}" />
                                <TextBox x:Name="TxtPhone" ToolTip="Enter phone number" />
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- == BAGIAN KANAN: ORDER SUMMARY == -->
                    <StackPanel Grid.Column="0" Margin="0,0,20,0">
                        <Border Style="{StaticResource ContentCard}">
                            <StackPanel>
                                <TextBlock Text="Order Summary" Style="{StaticResource SectionHeader}" FontWeight="Bold"  />

                                <TextBlock Text="Item" FontSize="13" Foreground="Gray" Margin="0,0,0,2"/>
                                <TextBlock Text="Going Merry" FontWeight="SemiBold" FontSize="16" Margin="0,0,0,10"/>

                                <TextBlock Text="Details" FontSize="13" Foreground="Gray" Margin="0,0,0,2"/>
                                <TextBlock Text="Senggigi > Lombok > 4 Capacity" FontSize="14" Margin="0,0,0,15"/>

                                <Grid Margin="0,5,0,10">
                                    <TextBlock Text="Price" HorizontalAlignment="Left" VerticalAlignment="Center" Foreground="#555" />
                                    <TextBlock Text="Rp 500.000" HorizontalAlignment="Right" VerticalAlignment="Center" FontWeight="SemiBold" FontSize="16"/>
                                </Grid>

                                <Separator Margin="0,10" />

                                <Grid Margin="0,10,0,0">
                                    <TextBlock Text="Total" HorizontalAlignment="Left" FontSize="18" FontWeight="Bold" />
                                    <TextBlock Text="Rp 1.500.000" HorizontalAlignment="Right" FontSize="18" FontWeight="Bold" />
                                </Grid>

                                <!-- Kotak Info Keamanan -->
                                <Border Background="#FFFBEB" BorderBrush="#FEEBAE" BorderThickness="1" CornerRadius="6" Padding="15" Margin="0,20,0,0">
                                    <StackPanel Orientation="Horizontal">
                                        <!-- Ganti dengan Ikon 'gembok' -->
                                        <TextBlock Text="🔒" FontSize="20" Margin="0,0,10,0" VerticalAlignment="Top"/>
                                        <TextBlock TextWrapping="Wrap" FontSize="13" Foreground="#6B4D03">
                                            Your payment is secure and encrypted. Your data is protected.
                                        </TextBlock>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>
                <!-- Akhir dari Grid 2 kolom -->

                <!-- == BAGIAN BAWAH: SELECT PAYMENT METHOD == -->
                <Border Grid.Row="1" Style="{StaticResource ContentCard}" Margin="0,20,0,20">
                    <StackPanel>
                        <TextBlock Text="Select Payment Method" Style="{StaticResource SectionHeader}" />
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <!-- Ganti Ellipse/Rectangle dengan Image berisi ikon pembayaran Anda -->

                            <!-- Opsi 1: Mobile Banking -->
                            <RadioButton Grid.Row="0" Grid.Column="0" Margin="0,0,10,10" Style="{StaticResource PaymentOption}">
                                <StackPanel Orientation="Horizontal">
                                    <Ellipse Fill="LightGray" Width="32" Height="32" Margin="0,0,10,0" />
                                    <!-- Placeholder Ikon -->
                                    <StackPanel VerticalAlignment="Center">
                                        <TextBlock Text="Mobile Banking" FontWeight="SemiBold" />
                                        <TextBlock Text="KlikBCA, Livin, etc" FontSize="12" Foreground="Gray" />
                                    </StackPanel>
                                </StackPanel>
                            </RadioButton>

                            <!-- Opsi 2: Gopay -->
                            <RadioButton Grid.Row="0" Grid.Column="1" Margin="10,0,0,10" IsChecked="True" Style="{StaticResource PaymentOption}">
                                <StackPanel Orientation="Horizontal">
                                    <Ellipse Fill="DodgerBlue" Width="32" Height="32" Margin="0,0,10,0" />
                                    <!-- Placeholder Ikon -->
                                    <StackPanel VerticalAlignment="Center">
                                        <TextBlock Text="Gopay" FontWeight="SemiBold" />
                                        <TextBlock Text="GoTo E-Wallet" FontSize="12" Foreground="Gray" />
                                    </StackPanel>
                                </StackPanel>
                            </RadioButton>

                            <!-- Opsi 3: OWO -->
                            <RadioButton Grid.Row="1" Grid.Column="0" Margin="0,10,10,0" Style="{StaticResource PaymentOption}">
                                <StackPanel Orientation="Horizontal">
                                    <Ellipse Fill="Purple" Width="32" Height="32" Margin="0,0,10,0" />
                                    <!-- Placeholder Ikon -->
                                    <StackPanel VerticalAlignment="Center">
                                        <TextBlock Text="OWO" FontWeight="SemiBold" />
                                        <TextBlock Text="Overnight Wallets" FontSize="12" Foreground="Gray" />
                                    </StackPanel>
                                </StackPanel>
                            </RadioButton>

                            <!-- Opsi 4: QRIS -->
                            <RadioButton Grid.Row="1" Grid.Column="1" Margin="10,10,0,0" Style="{StaticResource PaymentOption}">
                                <StackPanel Orientation="Horizontal">
                                    <Rectangle Fill="Black" Width="32" Height="32" Margin="0,0,10,0" />
                                    <!-- Placeholder Ikon -->
                                    <StackPanel VerticalAlignment="Center">
                                        <TextBlock Text="QRIS" FontWeight="SemiBold" />
                                        <TextBlock Text="Quick Response Code" FontSize="12" Foreground="Gray" />
                                    </StackPanel>
                                </StackPanel>
                            </RadioButton>
                        </Grid>
                    </StackPanel>
                </Border>
            </Grid>
        </ScrollViewer>
        <!-- Akhir dari ScrollViewer konten utama -->

        <!-- Row 2: Tombol Bayar di Footer -->
        <Border Grid.Row="2" Margin="40,20" Background="#33A1E0" CornerRadius="28" Height="56">
            <Button x:Name="PayButton"
                    Content="Pay Rp 1.500.000"
                    HorizontalAlignment="Stretch" 
                    VerticalAlignment="Stretch"
                    FontSize="18" 
                    FontWeight="ExtraBold"
                    Foreground="Black"
                    Background="#33A1E0"
                    BorderThickness="0"
                    Cursor="Hand">
                <!-- Template kustom untuk menghilangkan tampilan default button -->
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="28">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Border>
    </Grid>
</Page>