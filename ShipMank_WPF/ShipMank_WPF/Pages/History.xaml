<Page x:Class="ShipMank_WPF.Pages.History"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ShipMank_WPF.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="History" FontFamily="Segoe UI">

    <!-- Latar belakang gradien dari Payment.xaml -->
    <Page.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#FFF9AF" Offset="0"/>
            <GradientStop Color="#EBF1F5" Offset="0.5"/>
        </LinearGradientBrush>
    </Page.Background>

    <Page.Resources>
        <!-- Style untuk Tombol Tab (All, Tickets, Rentals) -->
        <Style TargetType="RadioButton" x:Key="TabButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="18" 
                                Padding="{TemplateBinding Padding}">
                            <!-- Menambahkan ikon dari gambar. Ganti dengan ikon Anda -->
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding Path=Tag, RelativeSource={RelativeSource TemplatedParent}}" Margin="0,0,5,0" FontSize="16"/>
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <!-- Saat Dipilih -->
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="Background" Value="#1C4B71"/>
                    <!-- Warna biru tua dari gambar -->
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
                <!-- Menggunakan MultiTrigger untuk IsChecked=False DAN IsMouseOver=True -->
                <MultiTrigger>
                    <MultiTrigger.Conditions>
                        <Condition Property="IsChecked" Value="False" />
                        <Condition Property="IsMouseOver" Value="True" />
                    </MultiTrigger.Conditions>
                    <Setter Property="Background" Value="#DDEAF4"/>
                    <!-- Hover biru muda -->
                </MultiTrigger>
            </Style.Triggers>
        </Style>

        <!-- Style untuk Tombol 'View Details' di dalam grid -->
        <Style TargetType="Button" x:Key="ViewDetailsButton">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="BorderBrush" Value="#CCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,5"/>
            <!-- PERBAIKAN: CornerRadius telah dihapus dari sini -->
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <!-- CornerRadius diatur di sini, di dalam Template -->
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F0F0F0"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Mengubah TargetType dari TextBlock ke Label -->
        <!-- Style Dasar untuk Status Pill (bulat) -->
        <Style TargetType="Label" x:Key="StatusBadge">
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <!-- Mengubah TargetType dari TextBlock ke Label -->
                    <ControlTemplate TargetType="Label">
                        <!-- Border ini yang membuat tampilan 'pill' -->
                        <Border Background="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Background}" 
                                CornerRadius="12">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style untuk DataGrid agar terlihat bersih dan modern -->
        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <!-- Menghilangkan garis grid -->
            <Setter Property="AlternatingRowBackground" Value="#F9F9F9"/>
            <!-- Warna belang-seling -->
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <!-- Kita definisikan kolom secara manual -->
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="CanUserResizeRows" Value="False"/>
            <Setter Property="RowHeight" Value="50"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <!-- Style untuk Header Kolom DataGrid -->
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#EBF1F5"/>
            <!-- Latar belakang header abu-abu muda -->
            <Setter Property="Foreground" Value="#555"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10,15"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="BorderBrush" Value="#DDD"/>
        </Style>

        <!-- Style untuk Sel DataGrid -->
        <Style TargetType="DataGridCell">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <!-- Menghilangkan highlight biru saat sel diklik -->
            <Setter Property="Focusable" Value="False"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="{x:Null}"/>
                    <Setter Property="BorderBrush" Value="{x:Null}"/>
                    <Setter Property="Foreground" Value="#333"/>
                </Trigger>
            </Style.Triggers>
        </Style>

    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Row 0: Header -->
            <RowDefinition Height="*"/>
            <!-- Row 2: DataGrid -->
        </Grid.RowDefinitions>

        <!-- Row 0: Header (Dari Payment, diubah teksnya) -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="40,30,40,20">
            <Image Source="/Assets/logob.png" Height="32" Width="32" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBlock Text="Orders" FontSize="32" FontWeight="Bold" VerticalAlignment="Center" Foreground="#333"/>
        </StackPanel>

        <!-- Row 2: DataGrid (Tabel) -->
        <!-- Dibungkus Border agar bisa memiliki CornerRadius dan Shadow -->
        <Border Grid.Row="2" Margin="40,0,40,30" CornerRadius="10" Background="White"
                ClipToBounds="True">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="1" BlurRadius="10" Color="#000000" Opacity="0.1" />
            </Border.Effect>

            <DataGrid x:Name="HistoryDataGrid"
                      IsReadOnly="True" SelectionChanged="HistoryDataGrid_SelectionChanged">
                <DataGrid.Columns>
                    <!-- Kolom 1: Order ID -->
                    <DataGridTextColumn Header="Order ID" Binding="{Binding OrderID}" FontWeight="Bold"/>

                    <!-- Kolom 2: Item (dengan ikon) -->
                    <DataGridTemplateColumn Header="Item" Width="*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock Text="⚓" FontSize="16" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding ItemName}" VerticalAlignment="Center" FontWeight="SemiBold"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- Kolom 3: Date (dengan ikon) -->
                    <DataGridTemplateColumn Header="Date" Width="*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock Text="📅" FontSize="16" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding Date, StringFormat='yyyy-MM-dd'}" VerticalAlignment="Center"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- Kolom 4: Location/Route (dengan ikon) -->
                    <DataGridTemplateColumn Header="Location/Route" Width="*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock Text="📍" FontSize="16" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding Route}" VerticalAlignment="Center"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- Kolom 5: Total -->
                    <DataGridTextColumn Header="Total" Binding="{Binding TotalString}" FontWeight="SemiBold"/>

                    <!-- Kolom 6: Status (Pills) -->
                    <DataGridTemplateColumn Header="Status" Width="Auto">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <!-- Menggunakan Label, bukan TextBlock, untuk status pill -->
                                <Label Content="{Binding Status}">
                                    <Label.Style>
                                        <!-- TargetType sekarang adalah Label -->
                                        <Style TargetType="Label" BasedOn="{StaticResource StatusBadge}">
                                            <Style.Triggers>
                                                <!-- DataTrigger akan mengubah style berdasarkan nilai Binding -->
                                                <DataTrigger Binding="{Binding Status}" Value="Completed">
                                                    <Setter Property="Background" Value="#28A745"/>
                                                    <Setter Property="Foreground" Value="White"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Status}" Value="Upcoming">
                                                    <Setter Property="Background" Value="#17A2B8"/>
                                                    <Setter Property="Foreground" Value="White"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Status}" Value="Cancelled">
                                                    <Setter Property="Background" Value="#DC3545"/>
                                                    <Setter Property="Foreground" Value="White"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Status}" Value="Unpaid">
                                                    <Setter Property="Background" Value="#FFC107"/>
                                                    <Setter Property="Foreground" Value="#333"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Label.Style>
                                </Label>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- Kolom 7: Tombol 'View Details' -->
                    <DataGridTemplateColumn Header="" Width="Auto">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="View Details" Style="{StaticResource ViewDetailsButton}"/>
                            </DataTemplate>
                            <!-- PERBAIKAN: Tag penutup yang salah telah diperbaiki -->
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                </DataGrid.Columns>
            </DataGrid>
        </Border>
    </Grid>
</Page>