<Page x:Class="ShipMank_WPF.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      Title="LoginPage">

    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0.5,1.4">
                <GradientStop Color="#33A1E0" Offset="-0.2"/>
                <GradientStop Color="#FFF9AF" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Viewbox Stretch="Uniform" StretchDirection="Both">
            <Grid Width="1000" Height="600">
                <TextBlock Text="ShipMank" 
                           FontSize="36" 
                           FontWeight="Bold" 
                           Foreground="White"
                           HorizontalAlignment="Center"
                           Margin="0,50,0,0"
                           FontFamily="pack://application:,,,/Fonts/#Konkhmer Sleokchher"/>

                <Border 
                    Background="White"
                    CornerRadius="10"
                    Padding="40"
                    Width="350"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">

                    <Border.Effect>
                        <DropShadowEffect BlurRadius="10"
                                          ShadowDepth="3"
                                          Opacity="0.3"
                                          Direction="270"/>
                    </Border.Effect>

                    <StackPanel>
                        <TextBlock Text="Login" 
                                   FontSize="28" 
                                   FontWeight="Bold" 
                                   Foreground="#333"
                                   HorizontalAlignment="Center"
                                   Margin="0 0 0 20"/>

                        <TextBlock Text="Username"
                                   FontWeight="SemiBold"
                                   Foreground="#666"/>
                        <TextBox Name="tbUsername"
                                 Height="35"
                                 Margin="0 5 0 15"
                                 FontFamily="Dubai"
                                 Padding="5"/>

                        <TextBlock Text="Password"
                                   FontWeight="SemiBold"
                                   FontFamily="Dubai"
                                   Foreground="#666"/>
                        <PasswordBox Name="tbPassword"
                                     Height="35"
                                     Margin="0 5 0 20"
                                     FontFamily="Dubai"
                                     Padding="5"/>

                        <Button Content="Login"
                            Height="35"
                            Background="#FFF9AF"
                            Foreground="#000000"
                            FontFamily="Dubai"
                            FontWeight="Bold"
                            BorderBrush="#FFF9AF"
                            Cursor="Hand"
                            Click="LoginButton_Click">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="10"/>
                                </Style>
                            </Button.Resources>
                        </Button>

                        <StackPanel Orientation="Horizontal" 
                                    HorizontalAlignment="Center"
                                    Margin="0 15 0 0">
                            <TextBlock Text="Belum punya akun? "
                                       FontFamily="Dubai"
                                       Foreground="#555"/>
                            <TextBlock Text="Daftar"
                                       FontFamily="Dubai"
                                       Foreground="#33A1E0"
                                       FontWeight="Bold"
                                       Cursor="Hand"
                                       MouseDown="SignUpText_MouseDown"
                                       TextDecorations="Underline"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>
        </Viewbox>
    </Grid>
</Page>
