<Page x:Class="ShipMank_WPF.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d"
      Title="LoginPage"
      Background="Transparent">

    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="Transparent">

        <Rectangle Fill="#EBF1F5"/>

        <Border 
            Background="#F2F8FF"
            CornerRadius="15"
            Padding="30"
            Width="400"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            RenderTransformOrigin="0.5,0.5">

            <Border.Effect>
                <DropShadowEffect BlurRadius="2"
                                  ShadowDepth="4"
                                  Opacity="0.4"
                                  Direction="270"/>
            </Border.Effect>

            <StackPanel>
                <TextBlock Text="Login" 
                           FontSize="28" 
                           FontWeight="Bold" 
                           Foreground="#000000"
                           HorizontalAlignment="Center"
                           Margin="0 0 0 20"/>

                <TextBlock Text="Username"
                           FontWeight="SemiBold"
                           Foreground="#000000"/>

                <Border Height="35"
                        Margin="0 5 0 15"
                        Background="#33A1E0"
                        Opacity="0.35"
                        Padding="5"
                        CornerRadius="8">
                    <TextBox Name="tbUsername"
                             FontFamily="Dubai"
                             Background="Transparent"
                             BorderThickness="0"
                             VerticalContentAlignment="Center"/>
                </Border>

                <TextBlock Text="Password"
                           FontWeight="SemiBold"
                           Foreground="#000000"/>

                <Border Height="35"
                        Margin="0 5 0 20"
                        Background="#33A1E0"
                        Opacity="0.35"
                        Padding="5"
                        CornerRadius="8">
                    <PasswordBox Name="tbPassword"
                                 FontFamily="Dubai"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 VerticalContentAlignment="Center"/>
                </Border>

                <Button Content="Masuk"
                     Height="25"
                     Background="#FFF9AF"
                     FontFamily="Dubai"
                     FontWeight="SemiBold"
                     Cursor="Hand"
                     HorizontalAlignment="Center"
                     BorderThickness="0"
                     Click="LoginButton_Click"  Width="100">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                            <Setter Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect 
                                        Color="Gray"      
                                        Opacity="0.2"   
                                        ShadowDepth="1"/>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Resources>
                </Button>

                <StackPanel Orientation="Horizontal" 
                    HorizontalAlignment="Center"
                    Margin="0 15 0 0">
                    <TextBlock Text="Belum punya akun? "
                       FontFamily="Dubai"
                       Foreground="#555"/>
                    <TextBlock Text="Daftar"
                       FontFamily="Dubai"
                       Foreground="#33A1E0"
                       FontWeight="Bold"
                       Cursor="Hand"
                       MouseDown="SignUpText_MouseDown"
                       TextDecorations="Underline"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Page>