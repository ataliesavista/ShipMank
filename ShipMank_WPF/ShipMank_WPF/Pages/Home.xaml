<Page x:Class="ShipMank_WPF.Pages.Home"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:components="clr-namespace:ShipMank_WPF.Components"
      xmlns:local="clr-namespace:ShipMank_WPF.Pages"
      xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks" 
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="Home">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Background="#EBF1F5">

            <Grid MinHeight="600">
                <Grid>
                    <Image Source="/Assets/hero2.jpg"
                           Stretch="UniformToFill"/>
                    <Grid>
                        <Grid.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Color="#33EBF1F5" Offset="0.3"/>
                                <GradientStop Color="#EBF1F5" Offset="1"/>
                            </LinearGradientBrush>
                        </Grid.Background>
                    </Grid>
                </Grid>

                <Grid VerticalAlignment="Center" Margin="100,80">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Left" Grid.Column="0" Margin="0,0,40,0">
                        <TextBlock Text="Boat Rentals &amp; Ship"
                                   FontSize="56"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   TextWrapping="Wrap"
                                   LineHeight="65"/>
                        <TextBlock Text="Tickets across"
                                   FontSize="56"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   TextWrapping="Wrap"
                                   LineHeight="65"/>
                        <TextBlock Text="Indonesia"
                                   FontSize="56"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   TextWrapping="Wrap"
                                   LineHeight="65"/>
                    </StackPanel>

                    <Border Background="#F5F5F5"
                            CornerRadius="25"
                            Padding="30"
                            Grid.Column="1"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            Margin="40,0,0,0">
                        <Border.Effect>
                            <DropShadowEffect Color="#40000000" Opacity="0.15" BlurRadius="15" ShadowDepth="3"/>
                        </Border.Effect>

                        <StackPanel>
                            <Border BorderBrush="#CCCCCC" 
                                    BorderThickness="2" 
                                    CornerRadius="25" 
                                    Margin="0,0,0,25">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Button x:Name="TicketsTabButton"
                                            Content="Tickets"
                                            Grid.Column="0"
                                            Background="#154D71"
                                            Foreground="White"
                                            FontWeight="Bold"
                                            FontSize="16"
                                            Height="50"
                                            BorderThickness="0"
                                            Click="TicketsTab_Click">
                                        <Button.Resources>
                                            <Style TargetType="Border">
                                                <Setter Property="CornerRadius" Value="23,0,0,23"/>
                                            </Style>
                                        </Button.Resources>
                                    </Button>

                                    <Button x:Name="RentalsTabButton"
                                            Content="Rentals"
                                            Grid.Column="1"
                                            Background="Transparent"
                                            Foreground="#888888"
                                            FontWeight="Bold"
                                            FontSize="16"
                                            Height="50"
                                            BorderThickness="0"
                                            Click="RentalsTab_Click">
                                        <Button.Resources>
                                            <Style TargetType="Border">
                                                <Setter Property="CornerRadius" Value="0,23,23,0"/>
                                            </Style>
                                        </Button.Resources>
                                    </Button>
                                </Grid>
                            </Border>

                            <StackPanel x:Name="TicketsContent" Visibility="Visible">
                                <Grid Margin="0,0,0,20">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="60"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="From" 
                                                   FontWeight="Bold" 
                                                   Foreground="#1a1a1a"
                                                   Margin="5,0,0,8"
                                                   FontSize="14"/>
                                        <Border Background="White"
                                                CornerRadius="10"
                                                Padding="15,12"
                                                BorderBrush="#E0E0E0"
                                                BorderThickness="1">
                                            <TextBlock Text="Jakarta (Priok)" 
                                                       FontWeight="Bold"
                                                       Foreground="Black"
                                                       FontSize="15"/>
                                        </Border>
                                    </StackPanel>

                                    <Border Width="40" 
                                            Height="40" 
                                            Background="White"
                                            CornerRadius="20"
                                            Grid.Column="1"
                                            VerticalAlignment="Bottom"
                                            Margin="10,0,10,5"
                                            BorderBrush="#E0E0E0"
                                            BorderThickness="1"
                                            Cursor="Hand">
                                        <iconPacks:PackIconMaterial Kind="SwapHorizontal"
                                                                    FontSize="20"
                                                                    HorizontalAlignment="Center"
                                                                    VerticalAlignment="Center"
                                                                    Foreground="#666"/>
                                    </Border>

                                    <StackPanel Grid.Column="2">
                                        <TextBlock Text="To" 
                                                   FontWeight="Bold" 
                                                   Foreground="#1a1a1a"
                                                   Margin="5,0,0,8"
                                                   FontSize="14"/>
                                        <Border Background="White"
                                                CornerRadius="10"
                                                Padding="15,12"
                                                BorderBrush="#E0E0E0"
                                                BorderThickness="1">
                                            <TextBlock Text="Surabaya (Perak)" 
                                                       FontWeight="Bold"
                                                       Foreground="Black"
                                                       FontSize="15"/>
                                        </Border>
                                    </StackPanel>
                                </Grid>

                                <Grid Margin="0,0,0,25">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="15"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="Date" 
                                                   FontWeight="Bold" 
                                                   Foreground="#1a1a1a"
                                                   Margin="5,0,0,8"
                                                   FontSize="14"/>
                                        <Border Background="White"
                                                CornerRadius="10"
                                                Padding="15,12"
                                                BorderBrush="#E0E0E0"
                                                BorderThickness="1"
                                                Cursor="Hand"
                                                MouseDown="DateBorder_MouseDown">
                                            <Grid>
                                                <DatePicker x:Name="TicketDatePicker"
                                                            BorderThickness="0"
                                                            Background="Transparent"
                                                            Opacity="0"
                                                            Width="0"
                                                            Height="0"/>
                                                <StackPanel Orientation="Horizontal">
                                                    <iconPacks:PackIconMaterial Kind="Calendar"
                                                                                Margin="0,0,8,0"
                                                                                Width="16" Height="16"
                                                                                VerticalAlignment="Center"/>
                                                    <TextBlock x:Name="DateTextBlock"
                                                               Text="Sen, 32 Feb 25" 
                                                               FontWeight="Bold"
                                                               Foreground="Black"
                                                               FontSize="14"
                                                               VerticalAlignment="Center"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </StackPanel>

                                    <StackPanel Grid.Column="2">
                                        <TextBlock Text="Passenger" 
                                                   FontWeight="Bold" 
                                                   Foreground="#1a1a1a"
                                                   Margin="5,0,0,8"
                                                   FontSize="14"/>
                                        <Border Background="White"
                                                CornerRadius="10"
                                                Padding="15,12"
                                                BorderBrush="#E0E0E0"
                                                BorderThickness="1"
                                                Cursor="Hand">
                                            <StackPanel Orientation="Horizontal">
                                                <iconPacks:PackIconMaterial Kind="Account" 
                                                                            Margin="0,0,8,0"
                                                                            Width="16" Height="16"
                                                                            VerticalAlignment="Center"/>
                                                <TextBlock Text="1" 
                                                           FontWeight="Bold"
                                                           Foreground="Black"
                                                           FontSize="15"
                                                           VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </Border>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>

                            <StackPanel x:Name="RentalsContent" Visibility="Collapsed">
                                <Grid Margin="0,0,0,25">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="15"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="Location" 
                                                   FontWeight="Bold" 
                                                   Foreground="#1a1a1a"
                                                   Margin="5,0,0,8"
                                                   FontSize="14"/>
                                        <Border Background="White"
                                                CornerRadius="10"
                                                Padding="15,12"
                                                BorderBrush="#E0E0E0"
                                                BorderThickness="1">
                                            <ComboBox x:Name="LocationComboBox"
                                                      BorderThickness="0"
                                                      Background="Transparent"
                                                      FontWeight="Bold"
                                                      FontSize="15"
                                                      Foreground="Black"
                                                      SelectedIndex="0">
                                                <ComboBoxItem Content="Any"/>
                                                <ComboBoxItem Content="Jakarta"/>
                                                <ComboBoxItem Content="Surabaya"/>
                                                <ComboBoxItem Content="Medan"/>
                                                <ComboBoxItem Content="Bali"/>
                                                <ComboBoxItem Content="Bandung"/>
                                            </ComboBox>
                                        </Border>
                                    </StackPanel>

                                    <StackPanel Grid.Column="2">
                                        <TextBlock Text="People" 
                                                   FontWeight="Bold" 
                                                   Foreground="#1a1a1a"
                                                   Margin="5,0,0,8"
                                                   FontSize="14"/>
                                        <Border Background="White"
                                                CornerRadius="10"
                                                Padding="15,12"
                                                BorderBrush="#E0E0E0"
                                                BorderThickness="1"
                                                Cursor="Hand">
                                            <StackPanel Orientation="Horizontal">
                                                <iconPacks:PackIconMaterial Kind="Account" 
                                                                            Margin="0,0,8,0"
                                                                            Width="16" Height="16"
                                                                            VerticalAlignment="Center"/>
                                                <TextBlock Text="2" 
                                                           FontWeight="Bold"
                                                           Foreground="Black"
                                                           FontSize="15"
                                                           VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </Border>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>

                            <Button Content="Search"
                                    Background="#154D71"
                                    Foreground="White"
                                    FontWeight="Bold"
                                    FontSize="16"
                                    Height="50"
                                    BorderThickness="0"
                                    Cursor="Hand">
                                <Button.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="12"/>
                                    </Style>
                                </Button.Resources>
                            </Button>
                        </StackPanel>
                    </Border>
                </Grid>
            </Grid>

            <StackPanel Margin="100,60,100,40">
                <TextBlock Text="Popular Destinations"
                           FontSize="32"
                           FontWeight="Bold"
                           Foreground="#1a1a1a"
                           Margin="0,0,0,30"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0"
                            CornerRadius="15"
                            Height="200"
                            Cursor="Hand">
                        <Border.Effect>
                            <DropShadowEffect Color="Gray" Opacity="0.3" BlurRadius="10" ShadowDepth="3"/>
                        </Border.Effect>
                        <Grid>
                            <Image Source="/Assets/hero.jpg"
                                   Stretch="UniformToFill">
                                <Image.OpacityMask>
                                    <VisualBrush>
                                        <VisualBrush.Visual>
                                            <Border Background="Black" 
                                                    CornerRadius="15" 
                                                    Width="400" 
                                                    Height="200"/>
                                        </VisualBrush.Visual>
                                    </VisualBrush>
                                </Image.OpacityMask>
                            </Image>
                            <Border Background="#40000000" CornerRadius="15"/>
                            <TextBlock Text="Jakarta"
                                       FontSize="28"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       VerticalAlignment="Top"
                                       HorizontalAlignment="Left"
                                       Margin="20,20,0,0"/>
                        </Grid>
                    </Border>

                    <Border Grid.Column="2"
                            CornerRadius="15"
                            Height="200"
                            Cursor="Hand">
                        <Border.Effect>
                            <DropShadowEffect Color="Gray" Opacity="0.3" BlurRadius="10" ShadowDepth="3"/>
                        </Border.Effect>
                        <Grid>
                            <Image Source="/Assets/hero.jpg"
                                   Stretch="UniformToFill">
                                <Image.OpacityMask>
                                    <VisualBrush>
                                        <VisualBrush.Visual>
                                            <Border Background="Black" 
                                                    CornerRadius="15" 
                                                    Width="400" 
                                                    Height="200"/>
                                        </VisualBrush.Visual>
                                    </VisualBrush>
                                </Image.OpacityMask>
                            </Image>
                            <Border Background="#40000000" CornerRadius="15"/>
                            <TextBlock Text="Surabaya"
                                       FontSize="28"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       VerticalAlignment="Top"
                                       HorizontalAlignment="Left"
                                       Margin="20,20,0,0"/>
                        </Grid>
                    </Border>

                    <Border Grid.Column="4"
                            CornerRadius="15"
                            Height="200"
                            Cursor="Hand">
                        <Border.Effect>
                            <DropShadowEffect Color="Gray" Opacity="0.3" BlurRadius="10" ShadowDepth="3"/>
                        </Border.Effect>
                        <Grid>
                            <Image Source="/Assets/hero.jpg"
                                   Stretch="UniformToFill">
                                <Image.OpacityMask>
                                    <VisualBrush>
                                        <VisualBrush.Visual>
                                            <Border Background="Black" 
                                                    CornerRadius="15" 
                                                    Width="400" 
                                                    Height="200"/>
                                        </VisualBrush.Visual>
                                    </VisualBrush>
                                </Image.OpacityMask>
                            </Image>
                            <Border Background="#40000000" CornerRadius="15"/>
                            <TextBlock Text="Medan"
                                       FontSize="28"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       VerticalAlignment="Top"
                                       HorizontalAlignment="Left"
                                       Margin="20,20,0,0"/>
                        </Grid>
                    </Border>
                </Grid>
            </StackPanel>

            <StackPanel Margin="100,20,100,40">
                <TextBlock Text="Popular Routes"
                           FontSize="32"
                           FontWeight="Bold"
                           Foreground="#1a1a1a"
                           Margin="0,0,0,30"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0"
                            Background="White"
                            CornerRadius="12"
                            Padding="20"
                            Cursor="Hand">
                        <Border.Effect>
                            <DropShadowEffect Color="Gray" Opacity="0.2" BlurRadius="8" ShadowDepth="2"/>
                        </Border.Effect>
                        <StackPanel>
                            <TextBlock FontSize="18" FontWeight="Bold" Foreground="#1a1a1a">
                                <TextBlock.Effect>
                                    <DropShadowEffect Color="Gray" Opacity="0.15" BlurRadius="3" ShadowDepth="1"/>
                                </TextBlock.Effect>
                                <Run Text="Jakarta"/>
                                <Run Text=" → " Foreground="#666"/>
                                <Run Text="Bangka"/>
                            </TextBlock>
                            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                <iconPacks:PackIconMaterial Kind="ClockOutline" 
                                                            FontSize="14" 
                                                            Margin="0,0,5,0" 
                                                            VerticalAlignment="Center"/>
                                <TextBlock Text="10h" FontWeight="SemiBold" Foreground="#333" FontSize="14"/>
                            </StackPanel>
                            <TextBlock Text="Rp 330.000 - 900.000" 
                                       FontWeight="Bold" 
                                       Foreground="#1a1a1a"
                                       FontSize="14"
                                       Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="2"
                            Background="White"
                            CornerRadius="12"
                            Padding="20"
                            Cursor="Hand">
                        <Border.Effect>
                            <DropShadowEffect Color="Gray" Opacity="0.2" BlurRadius="8" ShadowDepth="2"/>
                        </Border.Effect>
                        <StackPanel>
                            <TextBlock FontSize="18" FontWeight="Bold" Foreground="#1a1a1a">
                                <TextBlock.Effect>
                                    <DropShadowEffect Color="Gray" Opacity="0.15" BlurRadius="3" ShadowDepth="1"/>
                                </TextBlock.Effect>
                                <Run Text="Jakarta"/>
                                <Run Text=" → " Foreground="#666"/>
                                <Run Text="Bangka"/>
                            </TextBlock>
                            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                <iconPacks:PackIconMaterial Kind="ClockOutline" 
                                                            FontSize="14" 
                                                            Margin="0,0,5,0" 
                                                            VerticalAlignment="Center"/>
                                <TextBlock Text="10h" FontWeight="SemiBold" Foreground="#333" FontSize="14"/>
                            </StackPanel>
                            <TextBlock Text="Rp 330.000 - 900.000" 
                                       FontWeight="Bold" 
                                       Foreground="#1a1a1a"
                                       FontSize="14"
                                       Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="4"
                            Background="White"
                            CornerRadius="12"
                            Padding="20"
                            Cursor="Hand">
                        <Border.Effect>
                            <DropShadowEffect Color="Gray" Opacity="0.2" BlurRadius="8" ShadowDepth="2"/>
                        </Border.Effect>
                        <StackPanel>
                            <TextBlock FontSize="18" FontWeight="Bold" Foreground="#1a1a1a">
                                <TextBlock.Effect>
                                    <DropShadowEffect Color="Gray" Opacity="0.15" BlurRadius="3" ShadowDepth="1"/>
                                </TextBlock.Effect>
                                <Run Text="Jakarta"/>
                                <Run Text=" → " Foreground="#666"/>
                                <Run Text="Bangka"/>
                            </TextBlock>
                            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                <iconPacks:PackIconMaterial Kind="ClockOutline" 
                                                            FontSize="14" 
                                                            Margin="0,0,5,0" 
                                                            VerticalAlignment="Center"/>
                                <TextBlock Text="10h" FontWeight="SemiBold" Foreground="#333" FontSize="14"/>
                            </StackPanel>
                            <TextBlock Text="Rp 330.000 - 900.000" 
                                       FontWeight="Bold" 
                                       Foreground="#1a1a1a"
                                       FontSize="14"
                                       Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </StackPanel>

            <Border Margin="100,20,100,60"
                    CornerRadius="15"
                    Height="120">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#FFF9C4" Offset="0"/>
                        <GradientStop Color="#B2DFDB" Offset="0.5"/>
                        <GradientStop Color="#4DB6AC" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Border.Effect>
                    <DropShadowEffect Color="Gray" Opacity="0.3" BlurRadius="10" ShadowDepth="3"/>
                </Border.Effect>

                <Grid Margin="40,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel VerticalAlignment="Center" Grid.Column="0">
                        <TextBlock Text="Plan your island hop today!"
                                   FontSize="28"
                                   FontWeight="Bold"
                                   Foreground="#1a1a1a"
                                   Margin="0,0,0,5"/>
                        <TextBlock Text="Fast booking, secure payments, and support for every journey."
                                   FontSize="15"
                                   Foreground="#333"
                                   TextWrapping="Wrap"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" 
                                VerticalAlignment="Center" 
                                Grid.Column="1">
                        <Button Content="Buy Tickets"
                                Background="White"
                                Foreground="#1a1a1a"
                                FontWeight="Bold"
                                FontSize="14"
                                Height="40"
                                Width="130"
                                BorderThickness="0"
                                Margin="0,0,15,0"
                                Cursor="Hand">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="20"/>
                                </Style>
                            </Button.Resources>
                        </Button>

                        <Button Content="Browse Rentals"
                                Background="#154D71"
                                Foreground="White"
                                FontWeight="Bold"
                                FontSize="14"
                                Height="40"
                                Width="150"
                                BorderThickness="0"
                                Cursor="Hand">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="20"/>
                                </Style>
                            </Button.Resources>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <components:Footer/>

        </StackPanel>
    </ScrollViewer>
</Page>