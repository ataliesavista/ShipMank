<Page x:Class="ShipMank_WPF.Pages.Home"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ShipMank_WPF.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="Home">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Background="#E7EFF5">

            <Grid Height="350">
                <Image Source="/Assets/hero.jpg"
                       Stretch="UniformToFill"
                       Opacity="0.8"/>
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="ShipMank"
                               FontSize="48"
                               FontWeight="Bold"
                               Foreground="White"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="slogan"
                               FontSize="20"
                               Foreground="White"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>

            <Border Background="White"
                    CornerRadius="15"
                    Margin="0,-50,0,20"
                    MaxWidth="1200"
                    Width="1000"
                    Padding="20">
                <Border.Effect>
                    <DropShadowEffect Color="Gray" Opacity="0.3" BlurRadius="10" ShadowDepth="2"/>
                </Border.Effect>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Margin="5">
                        <TextBlock Text="From" FontWeight="Bold" Foreground="#555"/>
                        <Button Content="Jakarta (Priok)" 
                                Background="#F5F5F5"
                                FontWeight="Bold"
                                Foreground="Black"
                                Padding="8"
                                BorderThickness="0"
                                HorizontalAlignment="Stretch">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="8"/>
                                </Style>
                            </Button.Resources>
                        </Button>
                    </StackPanel>

                    <StackPanel Margin="5" Grid.Column="1">
                        <TextBlock Text="To" FontWeight="Bold" Foreground="#555"/>
                        <Button Content="Surabaya (Perak)" 
                                Background="#F5F5F5"
                                FontWeight="Bold"
                                Foreground="Black"
                                Padding="8"
                                BorderThickness="0"
                                HorizontalAlignment="Stretch">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="8"/>
                                </Style>
                            </Button.Resources>
                        </Button>
                    </StackPanel>

                    <StackPanel Margin="5" Grid.Column="2">
                        <TextBlock Text="Pergi" FontWeight="Bold" Foreground="#555"/>
                        <Button Content="Sen, 32 Feb 25" 
                                Background="#F5F5F5"
                                FontWeight="Bold"
                                Foreground="Black"
                                Padding="8"
                                BorderThickness="0"
                                HorizontalAlignment="Stretch">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="8"/>
                                </Style>
                            </Button.Resources>
                        </Button>
                    </StackPanel>

                    <StackPanel Margin="5" Grid.Column="3">
                        <TextBlock Text="Pulang" FontWeight="Bold" Foreground="#555"/>
                        <Button Content="Pilih tanggal" 
                                Background="#E0E0E0"
                                Foreground="#888"
                                Padding="8"
                                BorderThickness="0"
                                HorizontalAlignment="Stretch">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="8"/>
                                </Style>
                            </Button.Resources>
                        </Button>
                    </StackPanel>

                    <Button Grid.Column="4"
                            Content="Search"
                            Margin="10,21,0,5"
                            Width="100"
                            Background="#154D71"
                            Foreground="White"
                            FontWeight="Bold"
                            BorderThickness="0" RenderTransformOrigin="0.481,0.115">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="8"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </Grid>
            </Border>

            <StackPanel Margin="40,0,40,20">
                <TextBlock Text="Pencarian Terakhir"
                           FontSize="18"
                           FontWeight="Bold"
                           Margin="0,10,0,10"/>

                <Border Background="White" CornerRadius="10" Padding="10" MaxWidth="500" Width="400" HorizontalAlignment="Left">
                    <Border.Effect>
                        <DropShadowEffect Color="Gray" Opacity="0.2" BlurRadius="6" ShadowDepth="2"/>
                    </Border.Effect>

                    <StackPanel>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="Jakarta (Priok)" FontWeight="Bold"/>
                            <TextBlock Text="  →  " Margin="3,0"/>
                            <TextBlock Text="Surabaya (Perak)" FontWeight="Bold"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <TextBlock Text="📅 Kam, 15 Agu 25" Foreground="Black" FontWeight="DemiBold" FontFamily="Dubai"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="👤 2" Foreground="Black" FontWeight="DemiBold" FontFamily="Dubai"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>

            <StackPanel Margin="40,0,40,40">
                <TextBlock Text="Tiket Saya"
                           FontSize="18"
                           FontWeight="Bold"
                           Margin="0,10,0,10"/>

                <Border Background="White" CornerRadius="10" MaxWidth="500" Width="400" HorizontalAlignment="Left">
                    <Border.Effect>
                        <DropShadowEffect Color="Gray" Opacity="0.25" BlurRadius="8" ShadowDepth="2"/>
                    </Border.Effect>

                    <StackPanel>
                        <Border Background="#33A1E0" CornerRadius="10,10,0,0" Padding="8, 10, 8, 10" Margin="0,0,0,10"  MaxWidth="500" Width="400">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="Jakarta (Priok)" Foreground="Black" FontWeight="Bold"/>
                                <TextBlock Text="  ➜  " Foreground="Black"/>
                                <TextBlock Text="Surabaya (Perak)" Foreground="Black" FontWeight="Bold"/>
                            </StackPanel>
                        </Border>

                        <StackPanel Margin="15,0,15,15">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Kapal Api" FontWeight="Bold" FontSize="16" FontFamily="Dubai"/>
                                <TextBlock Text="19.00 - 03.15" Foreground="Black" FontFamily="Dubai" Grid.Column="1"/>
                            </Grid>

                            <StackPanel Orientation="Vertical">
                                <TextBlock Text="📅 Minggu, 17 Agustus 2025" Foreground="Black" FontWeight="DemiBold" FontFamily="Dubai"/>
                                <TextBlock Text="💺 Ekonomi" Foreground="Black" FontFamily="Dubai" FontWeight="DemiBold"/>
                                <TextBlock Text="👥 Jumlah Penumpang: 4" Foreground="Black" FontWeight="DemiBold" FontFamily="Dubai"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Page>