<Window x:Class="ShipMank_WPF.Components.RatingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        Title="Give Rating" Height="300" Width="400"
        WindowStyle="None" ResizeMode="NoResize"
        AllowsTransparency="True" Background="Transparent"
        WindowStartupLocation="CenterScreen">

    <Border Background="White" CornerRadius="20" BorderBrush="#ddd" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.3"/>
        </Border.Effect>

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20">
            <Button HorizontalAlignment="Right" Click="BtnCancel_Click" Background="Transparent" BorderThickness="0" Cursor="Hand">
                <iconPacks:PackIconMaterial Kind="Close" Foreground="#999"/>
            </Button>

            <iconPacks:PackIconMaterial Kind="SailBoat" Width="50" Height="50" Foreground="#33A1E0" HorizontalAlignment="Center" Margin="0,0,0,15"/>

            <TextBlock x:Name="TitleText" Text="How was your trip?" FontSize="22" FontWeight="Bold" Foreground="#333" HorizontalAlignment="Center"/>
            <TextBlock x:Name="SubTitleText" Text="Rate this ship after you finished your journey" FontSize="14" Foreground="#777" HorizontalAlignment="Center" Margin="0,5,0,20"/>

            <StackPanel x:Name="StarsPanel" Orientation="Horizontal" HorizontalAlignment="Center" MouseLeave="StackPanel_MouseLeave">
                <iconPacks:PackIconMaterial x:Name="Star1" Kind="Star" Width="40" Height="40" Margin="5" Cursor="Hand" Tag="1" MouseEnter="Star_MouseEnter" MouseLeftButtonDown="Star_Click" Foreground="#E0E0E0"/>
                <iconPacks:PackIconMaterial x:Name="Star2" Kind="Star" Width="40" Height="40" Margin="5" Cursor="Hand" Tag="2" MouseEnter="Star_MouseEnter" MouseLeftButtonDown="Star_Click" Foreground="#E0E0E0"/>
                <iconPacks:PackIconMaterial x:Name="Star3" Kind="Star" Width="40" Height="40" Margin="5" Cursor="Hand" Tag="3" MouseEnter="Star_MouseEnter" MouseLeftButtonDown="Star_Click" Foreground="#E0E0E0"/>
                <iconPacks:PackIconMaterial x:Name="Star4" Kind="Star" Width="40" Height="40" Margin="5" Cursor="Hand" Tag="4" MouseEnter="Star_MouseEnter" MouseLeftButtonDown="Star_Click" Foreground="#E0E0E0"/>
                <iconPacks:PackIconMaterial x:Name="Star5" Kind="Star" Width="40" Height="40" Margin="5" Cursor="Hand" Tag="5" MouseEnter="Star_MouseEnter" MouseLeftButtonDown="Star_Click" Foreground="#E0E0E0"/>
            </StackPanel>

            <Button x:Name="BtnSubmit" Content="Rate Now" Margin="0,25,0,0"
                    Background="#33A1E0" Foreground="White" FontWeight="Bold"
                    Padding="30,10" BorderThickness="0" Cursor="Hand"
                    IsEnabled="False" Click="BtnSubmit_Click">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                </Button.Resources>
            </Button>
        </StackPanel>
    </Border>
</Window>