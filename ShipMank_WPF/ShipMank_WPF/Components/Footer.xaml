<UserControl x:Class="ShipMank_WPF.Components.Footer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ShipMank_WPF.Components"
             mc:Ignorable="d" 
             Height="180"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Bottom">

    <Border Background="#EBF1F5" 
            Padding="100,30" 
            HorizontalAlignment="Stretch"
            BorderBrush="#80000000"
            BorderThickness="0,2,0,0">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" VerticalAlignment="Top">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                    <Image Source="/Assets/logob.png" 
                           Height="40" 
                           Width="50" 
                           VerticalAlignment="Center"
                           Margin="0,0,15,0"/>
                    <TextBlock Text="ShipMank"
                               FontSize="28"
                               FontWeight="Bold"
                               Foreground="#1a1a1a"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <TextBlock Text="Boat rentals and ship tickets across the Indonesian"
                           FontSize="14"
                           Foreground="#555555"
                           TextWrapping="Wrap"
                           MaxWidth="400"
                           HorizontalAlignment="Left"
                           LineHeight="20"/>
                <TextBlock Text="archipelago. Bright, fast, and easy."
                           FontSize="14"
                           Foreground="#555555"
                           TextWrapping="Wrap"
                           MaxWidth="400"
                           HorizontalAlignment="Left"
                           LineHeight="20"/>
            </StackPanel>

            <StackPanel Grid.Column="1" VerticalAlignment="Top" Margin="40,0,0,0">
                <TextBlock Text="Explore"
                           FontSize="16"
                           FontWeight="Bold"
                           Foreground="#1a1a1a"
                           Margin="0,0,0,15"/>

                <TextBlock Text="Popular Destination"
                           FontSize="14"
                           Foreground="#555555"
                           Margin="0,0,0,8"
                           Cursor="Hand">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Foreground" Value="#154D71"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>

                <TextBlock Text="Buy Ship Tickets"
                           FontSize="14"
                           Foreground="#555555"
                           Margin="0,0,0,8"
                           Cursor="Hand">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Foreground" Value="#154D71"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>

                <TextBlock Text="Rent A Boat"
                           FontSize="14"
                           Foreground="#555555"
                           Margin="0,0,0,8"
                           Cursor="Hand">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Foreground" Value="#154D71"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>

                <TextBlock Text="Help Center"
                           FontSize="14"
                           Foreground="#555555"
                           Cursor="Hand">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Foreground" Value="#154D71"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </StackPanel>

            <StackPanel Grid.Column="2" VerticalAlignment="Top" Margin="40,0,0,0">
                <TextBlock Text="Account"
                           FontSize="16"
                           FontWeight="Bold"
                           Foreground="#1a1a1a"
                           Margin="0,0,0,15"/>

                <TextBlock Text="Order History"
                           FontSize="14"
                           Foreground="#555555"
                           Margin="0,0,0,8"
                           Cursor="Hand">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Foreground" Value="#154D71"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>

                <TextBlock Text="Payments"
                           FontSize="14"
                           Foreground="#555555"
                           Margin="0,0,0,8"
                           Cursor="Hand">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Foreground" Value="#154D71"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>

                <TextBlock Text="Profile"
                           FontSize="14"
                           Foreground="#555555"
                           Cursor="Hand">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Foreground" Value="#154D71"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>