<UserControl x:Class="ShipMank_WPF.Components.PassengersControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ShipMank_WPF.Components"
             mc:Ignorable="d" 
             d:DesignHeight="520" d:DesignWidth="980"
             Padding="40" Background="Transparent">

    <UserControl.Resources>
        <DropShadowEffect x:Key="DropShadow"
                          Color="Black"
                          Direction="270"
                          ShadowDepth="1"
                          Opacity="0.1"
                          BlurRadius="5"/>

        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#1F2937"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="25">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="LinkButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="#0078D4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <ContentPresenter />
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Value="Underline"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Geometry x:Key="UserIconPath">M12,12c2.21,0,4,-1.79,4,-4s-1.79,-4,-4,-4,-4,1.79,-4,4,1.79,4,4,4zm0,2c-2.67,0,-8,1.34,-8,4v2h16v-2c0,-2.66,-5.33,-4,-8,-4z</Geometry>

    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Passenger Lists" 
                   FontSize="32" 
                   FontWeight="Bold" 
                   Foreground="#111827"
                   VerticalAlignment="Top"
                   HorizontalAlignment="Left"
                   Grid.Row="0"
                   Margin="0,0,0,20"/>

        <StackPanel Grid.Row="1" VerticalAlignment="Top">

            <Border Background="White"
                    CornerRadius="8"
                    BorderBrush="#E0E0E0"
                    BorderThickness="1"
                    Padding="15,12"
                    Margin="0,0,0,10"
                    Effect="{StaticResource DropShadow}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <Path Data="{StaticResource UserIconPath}" 
                              Fill="#4B5563" 
                              Width="16" Height="16" 
                              Stretch="Uniform" 
                              VerticalAlignment="Center"
                              Margin="0,0,10,0"/>
                        <TextBlock Text="1. Bambas Pamungkang"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                        <Button x:Name="BtnEdit1" Content="Edit" Style="{StaticResource LinkButtonStyle}" Margin="0,0,15,0" />
                        <Button x:Name="BtnDelete1" Content="Delete" Style="{StaticResource LinkButtonStyle}" />
                    </StackPanel>
                </Grid>
            </Border>

            <Border Background="White"
                    CornerRadius="8"
                    BorderBrush="#E0E0E0"
                    BorderThickness="1"
                    Padding="15,12"
                    Margin="0,0,0,10"
                    Effect="{StaticResource DropShadow}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <Path Data="{StaticResource UserIconPath}" 
                              Fill="#4B5563" 
                              Width="16" Height="16" 
                              Stretch="Uniform" 
                              VerticalAlignment="Center"
                              Margin="0,0,10,0"/>
                        <TextBlock Text="2. Bambas Pamungkang"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                        <Button x:Name="BtnEdit2" Content="Edit" Style="{StaticResource LinkButtonStyle}" Margin="0,0,15,0" />
                        <Button x:Name="BtnDelete2" Content="Delete" Style="{StaticResource LinkButtonStyle}" />
                    </StackPanel>
                </Grid>
            </Border>

        </StackPanel>

        <Button x:Name="BtnAddPassenger"
            Content="Add Passenger"
            Grid.Row="2"
            HorizontalAlignment="Stretch"
            Height="50"
            FontSize="18"
            FontWeight="Bold"
            Foreground="White"
            Margin="0,20,0,0">
            <Button.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#154D71" Offset="0"/>
                    <GradientStop Color="#2893D7" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                        CornerRadius="8"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}">
                        <ContentPresenter HorizontalAlignment="Center"
                            VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>

        </Button>

    </Grid>
</UserControl>