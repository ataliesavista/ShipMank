<UserControl x:Class="ShipMank_WPF.Components.ProfileNavbar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ShipMank_WPF.Components"
             mc:Ignorable="d" 
             d:DesignHeight="250" d:DesignWidth="300"
             Background="Transparent"
             Loaded="ProfileNavbar_Loaded">

    <Border Width="300" 
            Background="White" 
            CornerRadius="20" 
            ClipToBounds="True">

        <Border.Effect>
            <DropShadowEffect ShadowDepth="2" Color="#AAAAAA" Opacity="0.4" BlurRadius="10"/>
        </Border.Effect>

        <Grid>
            <Grid.Resources>
                <Style TargetType="RadioButton" x:Key="NavButtonStyle">
                    <Setter Property="Padding" Value="20,15"/>
                    <Setter Property="FontSize" Value="16"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="BorderBrush" Value="Transparent"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="Cursor" Value="Hand"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="RadioButton">
                                <Border Background="{TemplateBinding Background}" 
                                        BorderBrush="{TemplateBinding BorderBrush}" 
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter Property="Background" Value="#FFF9AF"/>
                            <Setter Property="Foreground" Value="Black"/>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#F5F5F5"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Grid.Resources>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Padding="20" CornerRadius="20,20,0,0">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0.45" EndPoint="1,0.55">
                        <GradientStop Color="#F6C945" Offset="0.024"/>
                        <GradientStop Color="#FFF9AF" Offset="0.9892"/>
                    </LinearGradientBrush>
                </Border.Background>

                <!-- === PERUBAHAN DI SINI === -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <!-- Border "BP" diganti dengan Ellipse + ImageBrush -->
                    <Ellipse Width="60" Height="60" Margin="0,0,15,0">
                        <Ellipse.Fill>
                            <ImageBrush x:Name="ProfilePictureImageBrush" />
                        </Ellipse.Fill>
                    </Ellipse>

                    <!-- TextBlock nama dibuat dinamis -->
                    <TextBlock x:Name="ProfileNameTextBlock" 
                               Text="Loading..." 
                               FontSize="18" 
                               FontWeight="Bold" 
                               VerticalAlignment="Center"/>
                </StackPanel>
                <!-- === AKHIR PERUBAHAN === -->

            </Border>

            <!-- Bagian Akun & Logout -->
            <StackPanel Grid.Row="1" Margin="0,0,0,20">
                <Separator Margin="10"/>
                <RadioButton x:Name="MyAccountButton" Content="My Account" Style="{StaticResource NavButtonStyle}" GroupName="NavMain" IsChecked="True"/>
                <RadioButton x:Name="LogoutButton" Content="Logout" Style="{StaticResource NavButtonStyle}" GroupName="NavMain" Checked="LogoutButton_Checked"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>