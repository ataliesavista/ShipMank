<UserControl x:Class="ShipMank_WPF.Components.ShipCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="380"
             Width="Auto" Height="Auto">

    <!-- Definisi Warna -->
    <UserControl.Resources>
        <SolidColorBrush x:Key="PrimaryBlue" Color="#1570A6"/>
        <SolidColorBrush x:Key="AccentYellow" Color="#FFC72C"/>
        <SolidColorBrush x:Key="LightGrayText" Color="#6B7280"/>
        <SolidColorBrush x:Key="DarkGrayText" Color="#4B5563"/>
        <Style x:Key="BadgeStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource AccentYellow}"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="0,0,8,8"/>
        </Style>
    </UserControl.Resources>

    <!-- Hapus Width="380" di sini agar lebar mengikuti konten atau container -->
    <Border Background="White" CornerRadius="15" Margin="0,0,20,20" 
            MaxWidth="380">
        <!-- Catatan: Saya menambahkan MaxWidth="380" agar kartu tetap terlihat seperti kartu dan tidak memanjang 
             secara tak terbatas jika diletakkan di container yang sangat lebar. -->
        <Border.Effect>
            <DropShadowEffect ShadowDepth="2" Color="#CCCCCC" Opacity="0.5" BlurRadius="10"/>
        </Border.Effect>

        <StackPanel>
            <!-- Bagian Gambar dan Badge Kelas -->
            <Grid>
                <Border CornerRadius="15,15,0,0" Height="220" ClipToBounds="True">
                    <!-- ImageSource adalah Dependency Property -->
                    <Image Source="{Binding ImageSource, RelativeSource={RelativeSource AncestorType=UserControl}}" Stretch="UniformToFill" />
                </Border>

                <!-- Badge Kelas (misalnya: Yacht) -->
                <Border Background="{StaticResource PrimaryBlue}"
                        CornerRadius="10" Padding="15,7" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="15">
                    <!-- ShipClass adalah Dependency Property -->
                    <TextBlock Text="{Binding ShipClass, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                               FontWeight="Bold" FontSize="14" Foreground="White"/>
                </Border>
            </Grid>

            <!-- Bagian Konten Detail -->
            <StackPanel Margin="20">

                <!-- Nama Kapal -->
                <TextBlock Text="{Binding ShipName, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                           FontSize="28" FontWeight="ExtraBold" Margin="0,0,0,10"/>

                <!-- Lokasi, Kapasitas, dan Rating (Menggunakan Grid 2 kolom) -->
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <!-- Lokasi Kapal -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="&#xE707;" FontFamily="Segoe MDL2 Assets" FontSize="18" Margin="0,0,8,0" VerticalAlignment="Center" Foreground="{StaticResource DarkGrayText}"/>
                            <!-- Location adalah Dependency Property -->
                            <TextBlock Text="{Binding Location, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                       FontSize="16" Foreground="{StaticResource DarkGrayText}"/>
                        </StackPanel>

                        <!-- Kapasitas Orang -->
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE734;" FontFamily="Segoe MDL2 Assets" FontSize="18" Margin="0,0,8,0" VerticalAlignment="Center" Foreground="{StaticResource DarkGrayText}"/>
                            <!-- Capacity adalah Dependency Property -->
                            <TextBlock Text="{Binding Capacity, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                       FontSize="16" Foreground="{StaticResource DarkGrayText}"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Rating Kapal -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Right">
                        <TextBlock Text="&#xE735;" FontFamily="Segoe MDL2 Assets" FontSize="20" Foreground="{StaticResource AccentYellow}" Margin="0,0,5,0"/>
                        <!-- Rating adalah Dependency Property -->
                        <TextBlock Text="{Binding Rating, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                   FontSize="18" FontWeight="SemiBold" VerticalAlignment="Center"/>
                    </StackPanel>
                </Grid>

                <!-- Fasilitas Kapal (Amenities) -->
                <ItemsControl ItemsSource="{Binding Facilities, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                    Margin="0,0,0,20">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource BadgeStyle}">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                        <GradientStop Color="#F6C945" Offset="0"/>
                                        <GradientStop Color="#FFF9AF" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <TextBlock Text="{Binding}" FontSize="12" FontWeight="SemiBold" Foreground="#1F2937"/>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- Separator -->
                <Border Height="1" Background="#E5E7EB" Margin="0,0,0,20"/>

                <!-- Harga dan Tombol Booking -->
                <Grid VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <!-- Price adalah Dependency Property -->
                        <TextBlock>
                            <Run Text="{Binding Price, RelativeSource={RelativeSource AncestorType=UserControl}}" FontSize="28" FontWeight="Bold"/>
                            <!-- PriceUnit adalah Dependency Property -->
                            <Run Text="{Binding PriceUnit, RelativeSource={RelativeSource AncestorType=UserControl}}" FontSize="16" Foreground="{StaticResource LightGrayText}"/>
                        </TextBlock>
                    </StackPanel>

                    <!-- Tombol Booking -->
                    <Button Grid.Column="1" Content="Book Now" 
                            Background="{StaticResource PrimaryBlue}" Foreground="White"
                            Padding="25,12" BorderThickness="0" 
                            Cursor="Hand" FontWeight="SemiBold" Click="Button_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                        CornerRadius="8"
                                        Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>