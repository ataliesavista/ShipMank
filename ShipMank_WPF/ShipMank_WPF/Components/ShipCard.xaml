<UserControl x:Class="ShipMank_WPF.Components.ShipCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ShipMank_WPF.Components"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="380"
             Width="Auto" Height="Auto">

    <!-- Definisi Warna -->
    <UserControl.Resources>
        <SolidColorBrush x:Key="PrimaryBlue" Color="#1570A6"/>
        <SolidColorBrush x:Key="AccentYellow" Color="#FFC72C"/>
        <SolidColorBrush x:Key="LightGrayText" Color="#6B7280"/>
        <SolidColorBrush x:Key="DarkGrayText" Color="#4B5563"/>
        <Style x:Key="BadgeStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource AccentYellow}"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="0,0,8,8"/>
        </Style>
    </UserControl.Resources>

    <!-- ANIMASI ZOOM GAMBAR SAAT HOVER -->
    <UserControl.Triggers>
        <EventTrigger RoutedEvent="MouseEnter">
            <BeginStoryboard>
                <Storyboard>
                    <!-- Scale X membesar ke 1.1 -->
                    <DoubleAnimation Storyboard.TargetName="ShipImage"
                                     Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                     To="1.1" Duration="0:0:0.4">
                        <DoubleAnimation.EasingFunction>
                            <CubicEase EasingMode="EaseOut"/>
                        </DoubleAnimation.EasingFunction>
                    </DoubleAnimation>
                    <!-- Scale Y membesar ke 1.1 -->
                    <DoubleAnimation Storyboard.TargetName="ShipImage"
                                     Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                     To="1.1" Duration="0:0:0.4">
                        <DoubleAnimation.EasingFunction>
                            <CubicEase EasingMode="EaseOut"/>
                        </DoubleAnimation.EasingFunction>
                    </DoubleAnimation>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>

        <EventTrigger RoutedEvent="MouseLeave">
            <BeginStoryboard>
                <Storyboard>
                    <!-- Kembali ke ukuran normal (1.0) -->
                    <DoubleAnimation Storyboard.TargetName="ShipImage"
                                     Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                     To="1.0" Duration="0:0:0.4">
                        <DoubleAnimation.EasingFunction>
                            <CubicEase EasingMode="EaseOut"/>
                        </DoubleAnimation.EasingFunction>
                    </DoubleAnimation>
                    <DoubleAnimation Storyboard.TargetName="ShipImage"
                                     Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                     To="1.0" Duration="0:0:0.4">
                        <DoubleAnimation.EasingFunction>
                            <CubicEase EasingMode="EaseOut"/>
                        </DoubleAnimation.EasingFunction>
                    </DoubleAnimation>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </UserControl.Triggers>

    <Border Background="White" CornerRadius="15" Margin="0,0,20,20" MaxWidth="380">
        <Border.Effect>
            <DropShadowEffect ShadowDepth="2" Color="#CCCCCC" Opacity="0.5" BlurRadius="10"/>
        </Border.Effect>

        <StackPanel>
            <!-- Bagian Gambar dan Badge Kelas -->
            <Grid>
                <!-- ClipToBounds="True" Wajib agar zoom tidak keluar dari border -->
                <Border CornerRadius="15,15,0,0" Height="220" ClipToBounds="True">

                    <!-- Tambahkan x:Name dan RenderTransform -->
                    <Image x:Name="ShipImage" 
                           Source="{Binding ImageSource, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                           Stretch="UniformToFill"
                           RenderTransformOrigin="0.5, 0.5">
                        <Image.RenderTransform>
                            <ScaleTransform ScaleX="1.0" ScaleY="1.0"/>
                        </Image.RenderTransform>
                    </Image>

                </Border>

                <!-- Badge Kelas -->
                <Border Background="{StaticResource PrimaryBlue}"
                        CornerRadius="10" Padding="15,7" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="15">
                    <TextBlock Text="{Binding ShipClass, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                               FontWeight="Bold" FontSize="14" Foreground="White"/>
                </Border>
            </Grid>

            <!-- Bagian Konten Detail -->
            <StackPanel Margin="20">

                <!-- Nama Kapal -->
                <TextBlock Text="{Binding ShipName, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                           FontSize="28" FontWeight="ExtraBold" Margin="0,0,0,10"/>

                <!-- Lokasi, Kapasitas, dan Rating -->
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <!-- Lokasi Kapal -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <iconPacks:PackIconMaterial Kind="MapMarker" 
                                                        Width="16" Height="16" 
                                                        Margin="0,0,8,0" 
                                                        VerticalAlignment="Center" 
                                                        Foreground="{StaticResource DarkGrayText}"/>

                            <TextBlock Text="{Binding Location, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                       FontSize="16" Foreground="{StaticResource DarkGrayText}"/>
                        </StackPanel>

                        <!-- Kapasitas Orang -->
                        <StackPanel Orientation="Horizontal">
                            <iconPacks:PackIconMaterial Kind="AccountGroup" 
                                                        Width="18" Height="18" 
                                                        Margin="0,0,8,0" 
                                                        VerticalAlignment="Center" 
                                                        Foreground="{StaticResource DarkGrayText}"/>

                            <TextBlock Text="{Binding Capacity, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                       FontSize="16" Foreground="{StaticResource DarkGrayText}"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Rating Kapal -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Right">
                        <iconPacks:PackIconMaterial Kind="Star" 
                                                    Width="18" Height="18" 
                                                    Foreground="{StaticResource AccentYellow}" 
                                                    Margin="0,0,5,0" 
                                                    VerticalAlignment="Center"/>

                        <TextBlock Text="{Binding Rating, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                   FontSize="18" FontWeight="SemiBold" VerticalAlignment="Center"/>
                    </StackPanel>
                </Grid>

                <!-- Fasilitas Kapal (Amenities) -->
                <ItemsControl ItemsSource="{Binding Facilities, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                              Margin="0,0,0,20">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource BadgeStyle}">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                        <GradientStop Color="#F6C945" Offset="0"/>
                                        <GradientStop Color="#FFF9AF" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <TextBlock Text="{Binding}" FontSize="12" FontWeight="SemiBold" Foreground="#1F2937"/>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- Separator -->
                <Border Height="1" Background="#E5E7EB" Margin="0,0,0,20"/>

                <!-- Harga dan Tombol Booking -->
                <Grid VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock>
                            <Run Text="{Binding Price, RelativeSource={RelativeSource AncestorType=UserControl}}" FontSize="28" FontWeight="Bold"/>
                            <Run Text="{Binding PriceUnit, RelativeSource={RelativeSource AncestorType=UserControl}}" FontSize="16" Foreground="{StaticResource LightGrayText}"/>
                        </TextBlock>
                    </StackPanel>

                    <!-- Tombol Booking -->
                    <Button Grid.Column="1" Content="Book Now" 
                            Background="{StaticResource PrimaryBlue}" Foreground="White"
                            Padding="25,12" BorderThickness="0" 
                            Cursor="Hand" FontWeight="SemiBold" Click="Button_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                        CornerRadius="8"
                                        Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>