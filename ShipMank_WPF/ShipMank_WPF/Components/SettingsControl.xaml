<UserControl x:Class="ShipMank_WPF.Components.SettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ShipMank_WPF.Components"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="980"
             Padding="40"
             FontFamily="Inter, Segoe UI, sans-serif"
             Background="Transparent"
             Loaded="SettingsControl_Loaded">

    <UserControl.Resources>
        <!-- Warna -->
        <SolidColorBrush x:Key="PrimaryBlueBrush" Color="#3B99FC"/>
        <SolidColorBrush x:Key="LightGrayBrush" Color="#E5E7EB"/>
        <SolidColorBrush x:Key="MidGrayBrush" Color="#9CA3AF"/>
        <SolidColorBrush x:Key="DarkGrayBrush" Color="#4B5563"/>
        <SolidColorBrush x:Key="TextGrayBrush" Color="#6B7280"/>
        <SolidColorBrush x:Key="BorderGrayBrush" Color="#D1D5DB"/>

        <Style x:Key="SettingsTitle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="32"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
            <Setter Property="Foreground" Value="#111827"/>
        </Style>

        <Style x:Key="SettingsTabControl" TargetType="TabControl">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabControl">
                        <Grid Background="Transparent">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <TabPanel Grid.Row="0" IsItemsHost="True" Background="Transparent"/>
                            <Border Grid.Row="0" BorderBrush="{StaticResource BorderGrayBrush}" BorderThickness="0,0,0,1" Margin="0,0,0,-1"/>
                            <ContentPresenter Grid.Row="1" ContentSource="SelectedContent"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SettingsTabItem" TargetType="TabItem">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="Foreground" Value="{StaticResource MidGrayBrush}"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Grid Background="Transparent">
                            <ContentPresenter ContentSource="Header" Margin="{TemplateBinding Padding}"/>
                            <Border x:Name="BottomBorder" BorderBrush="Transparent" BorderThickness="0,0,0,3" VerticalAlignment="Bottom"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Foreground" Value="{StaticResource PrimaryBlueBrush}"/>
                                <Setter TargetName="BottomBorder" Property="BorderBrush" Value="{StaticResource PrimaryBlueBrush}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="{StaticResource PrimaryBlueBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SectionContainer" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="15"/>
            <Setter Property="Margin" Value="0,20,0,0"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect ShadowDepth="2" Color="#000000" Opacity="0.08" BlurRadius="15" Direction="270"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="HeaderButton" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryBlueBrush}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="15,6"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="20">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F3F4F6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="FormLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="{StaticResource TextGrayBrush}"/>
            <Setter Property="Margin" Value="0,0,0,6"/>
            <Setter Property="FontWeight" Value="Medium"/>
        </Style>

        <Style x:Key="FormTextBox" TargetType="TextBox">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderGrayBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsReadOnly" Value="True">
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="Foreground" Value="{StaticResource DarkGrayBrush}"/>
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Padding" Value="0,10"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- ============================================== -->
        <!-- MODIFIKASI 1: Padding Kiri Dropdown Readonly = 5 -->
        <!-- ============================================== -->
        <Style x:Key="FormComboBox" TargetType="ComboBox">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderGrayBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="1"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="Foreground" Value="{StaticResource DarkGrayBrush}"/>
                    <Setter Property="Background" Value="Transparent"/>
                    <!-- Padding kiri diubah menjadi 5 -->
                    <Setter Property="Padding" Value="5,10,0,10"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="LinkButton" TargetType="Button">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Foreground" Value="#EF4444"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <TextBlock x:Name="TextContent" Text="{TemplateBinding Content}" Foreground="{TemplateBinding Foreground}" FontSize="{TemplateBinding FontSize}" FontWeight="{TemplateBinding FontWeight}" TextDecorations="None"/>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="TextContent" Property="TextDecorations" Value="Underline"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SwitchToggleButton" TargetType="ToggleButton">
            <Setter Property="Width" Value="50"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Grid Background="Transparent">
                            <Border x:Name="Track" Background="{StaticResource LightGrayBrush}" CornerRadius="14"/>
                            <Ellipse x:Name="Thumb" Fill="White" Width="22" Height="22" HorizontalAlignment="Left" Margin="3">
                                <Ellipse.Effect>
                                    <DropShadowEffect ShadowDepth="1" Opacity="0.1" BlurRadius="2"/>
                                </Ellipse.Effect>
                            </Ellipse>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Track" Property="Background" Value="{StaticResource PrimaryBlueBrush}"/>
                                <Setter TargetName="Thumb" Property="HorizontalAlignment" Value="Right"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <!-- Background utama transparan -->
    <Grid Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Settings" Style="{StaticResource SettingsTitle}"/>

        <TabControl Grid.Row="1" Style="{StaticResource SettingsTabControl}">

            <!-- Tab 1: Account Info -->
            <TabItem Header="Account Information" Style="{StaticResource SettingsTabItem}">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Padding="0,0,5,0">
                    <StackPanel Margin="0,10,0,20">

                        <!-- Personal Information Section -->
                        <Border Style="{StaticResource SectionContainer}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <Border Grid.Row="0" Background="{StaticResource PrimaryBlueBrush}" CornerRadius="15,15,0,0" Padding="25,20">
                                    <Grid>
                                        <TextBlock Text="Personal Information" FontSize="20" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
                                        <Button x:Name="EditSaveButton" Content="Edit" Style="{StaticResource HeaderButton}" Click="EditSaveButton_Click"/>
                                    </Grid>
                                </Border>

                                <StackPanel Grid.Row="1" Margin="25">
                                    <StackPanel Margin="0,0,0,20">
                                        <TextBlock Text="Full Name" Style="{StaticResource FormLabel}" Foreground="Black" FontWeight="Bold"/>
                                        <TextBox x:Name="FullNameTextBox" Text="Loading..." Style="{StaticResource FormTextBox}" IsReadOnly="True"/>
                                    </StackPanel>

                                    <Grid Margin="0,0,0,20">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="20"/>
                                            <ColumnDefinition Width="2*"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="Gender" Style="{StaticResource FormLabel}"  Foreground="Black" FontWeight="Bold"/>
                                            <ComboBox x:Name="GenderComboBox" Style="{StaticResource FormComboBox}" IsEnabled="False">
                                                <ComboBoxItem Content="Wanita"/>
                                                <ComboBoxItem Content="Pria"/>
                                            </ComboBox>
                                        </StackPanel>
                                        <StackPanel Grid.Column="2">
                                            <TextBlock Text="Birth Date" Style="{StaticResource FormLabel}" Foreground="Black" FontWeight="Bold"/>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="10"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="10"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <ComboBox x:Name="CmbBirthDay" Grid.Column="0" Style="{StaticResource FormComboBox}" IsEnabled="False" />
                                                <ComboBox x:Name="CmbBirthMonth" Grid.Column="2" Style="{StaticResource FormComboBox}" IsEnabled="False" />
                                                <ComboBox x:Name="CmbBirthYear" Grid.Column="4" Style="{StaticResource FormComboBox}" IsEnabled="False" />
                                            </Grid>
                                        </StackPanel>
                                    </Grid>

                                    <StackPanel Margin="0,0,0,5">
                                        <TextBlock Text="City" Style="{StaticResource FormLabel}"  Foreground="Black" FontWeight="Bold"/>
                                        <!-- CityTextBox nanti dihandle di backend -->
                                        <TextBox x:Name="CityTextBox" Style="{StaticResource FormTextBox}" IsReadOnly="True"/>
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Email Section -->
                        <Border Style="{StaticResource SectionContainer}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <!-- Header Email -->
                                <Border Grid.Row="0" Background="{StaticResource PrimaryBlueBrush}" CornerRadius="15,15,0,0" Padding="25,20">
                                    <Grid>
                                        <TextBlock Text="Email" FontSize="20" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>

                                    </Grid>
                                </Border>

                                <!-- Konten Formulir Email -->
                                <StackPanel Grid.Row="1" Margin="25">
                                    <StackPanel>
                                        <TextBox x:Name="EmailTextBox" Text="Loading..." Style="{StaticResource FormTextBox}" IsReadOnly="True"/>
                                    </StackPanel>

                                    <!-- Input Email Baru (Muncul saat +Email diklik) -->
                                </StackPanel>
                            </Grid>
                        </Border>

                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Tab 2: Password & Security -->
            <TabItem Header="Password &amp; Security" Style="{StaticResource SettingsTabItem}">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Padding="0,0,5,0">
                    <StackPanel Margin="0,10,0,20">

                        <Border Style="{StaticResource SectionContainer}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Border Grid.Row="0" Background="{StaticResource PrimaryBlueBrush}" CornerRadius="15,15,0,0" Padding="25,20">
                                    <TextBlock Text="Security &amp; Authetication" FontSize="20" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
                                </Border>
                                <Grid Grid.Row="1" Margin="25">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                        <TextBlock Text="Enable login verification" FontSize="16"  Foreground="Black" FontWeight="Bold"/>
                                        <TextBlock Text="Send me a verification code every time I log in from a new device" FontSize="14" Foreground="{StaticResource TextGrayBrush}" Margin="0,5,0,0"/>
                                    </StackPanel>
                                    <ToggleButton Grid.Column="1" IsChecked="True" Style="{StaticResource SwitchToggleButton}" VerticalAlignment="Center" Margin="20,0,0,0"/>
                                </Grid>
                            </Grid>
                        </Border>

                        <Border Style="{StaticResource SectionContainer}">
                            <Grid Margin="25">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                    <TextBlock Text="Delete Account" FontSize="18" FontWeight="Bold" Foreground="#DC2626"/>
                                    <TextBlock Text="Once your account is deleted, you will not be able to restore your account or data." FontSize="14" Foreground="{StaticResource TextGrayBrush}" Margin="0,5,0,0" TextWrapping="Wrap"/>
                                </StackPanel>
                                <Button Grid.Column="1" Content="Delete" Style="{StaticResource LinkButton}" VerticalAlignment="Center" Margin="20,0,0,0" Click="DeleteAccount_Click"/>
                            </Grid>
                        </Border>

                    </StackPanel>
                </ScrollViewer>
            </TabItem>

        </TabControl>

    </Grid>
</UserControl>