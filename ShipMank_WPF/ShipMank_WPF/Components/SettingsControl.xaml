<UserControl x:Class="ShipMank_WPF.Components.SettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ShipMank_WPF.Components"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="980"
             Padding="40"
             FontFamily="Inter, Segoe UI, sans-serif"
             Background="Transparent">

    <UserControl.Resources>
        <!-- Warna -->
        <SolidColorBrush x:Key="PrimaryBlueBrush" Color="#3B99FC"/>
        <SolidColorBrush x:Key="LightGrayBrush" Color="#E5E7EB"/>
        <SolidColorBrush x:Key="MidGrayBrush" Color="#9CA3AF"/>
        <SolidColorBrush x:Key="DarkGrayBrush" Color="#4B5563"/>
        <SolidColorBrush x:Key="TextGrayBrush" Color="#6B7280"/>
        <SolidColorBrush x:Key="BorderGrayBrush" Color="#D1D5DB"/>
        <!-- ✅ Ganti warna background window menjadi transparan -->
        <SolidColorBrush x:Key="WindowBackgroundBrush" Color="#00FFFFFF"/>

        <!-- Style untuk Judul Utama -->
        <Style x:Key="SettingsTitle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="32"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
            <Setter Property="Foreground" Value="#111827"/>
        </Style>

        <!-- Style untuk TabControl -->
        <Style x:Key="SettingsTabControl" TargetType="TabControl">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabControl">
                        <Grid Background="Transparent">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <TabPanel Grid.Row="0" IsItemsHost="True" Background="Transparent"/>
                            <Border Grid.Row="0" BorderBrush="{StaticResource BorderGrayBrush}" BorderThickness="0,0,0,1" Margin="0,0,0,-1"/>
                            <ContentPresenter Grid.Row="1" ContentSource="SelectedContent"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style untuk TabItem -->
        <Style x:Key="SettingsTabItem" TargetType="TabItem">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="Foreground" Value="{StaticResource MidGrayBrush}"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Grid Background="Transparent">
                            <ContentPresenter ContentSource="Header" Margin="{TemplateBinding Padding}"/>
                            <Border x:Name="BottomBorder" BorderBrush="Transparent" BorderThickness="0,0,0,3" VerticalAlignment="Bottom"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Foreground" Value="{StaticResource PrimaryBlueBrush}"/>
                                <Setter TargetName="BottomBorder" Property="BorderBrush" Value="{StaticResource PrimaryBlueBrush}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="{StaticResource PrimaryBlueBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Section Container -->
        <Style x:Key="SectionContainer" TargetType="Border">
            <Setter Property="Background" Value="#00FFFFFF"/>
            <!-- ✅ transparan -->
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Margin" Value="0,20,0,0"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect ShadowDepth="1" Color="#000000" Opacity="0.05" BlurRadius="10" RenderingBias="Quality"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Header Section -->
        <Style x:Key="SectionHeaderGrid" TargetType="Grid">
            <Setter Property="Background" Value="#3B99FC"/>
        </Style>

        <Style x:Key="SectionHeaderTitle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="20"/>
        </Style>

        <Style x:Key="HeaderButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource LightGrayBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource DarkGrayBrush}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="20"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="20">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#D1D5DB"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Form -->
        <Style x:Key="FormLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="{StaticResource TextGrayBrush}"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <Style x:Key="FormTextBox" TargetType="TextBox">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderGrayBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="#00FFFFFF"/>
            <!-- ✅ transparan -->
        </Style>

        <Style x:Key="FormComboBox" TargetType="ComboBox">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderGrayBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="#00FFFFFF"/>
            <!-- ✅ transparan -->
        </Style>

        <!-- Tombol Link -->
        <Style x:Key="LinkButton" TargetType="Button">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryBlueBrush}"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <TextBlock x:Name="TextContent"
                                   Text="{TemplateBinding Content}"
                                   Foreground="{TemplateBinding Foreground}"
                                   FontSize="{TemplateBinding FontSize}"
                                   FontWeight="{TemplateBinding FontWeight}"
                                   TextDecorations="None"/>
                        <!-- ★★★ PERBAIKAN DI SINI: {x:Null} diubah menjadi "None" ★★★ -->
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="TextContent" Property="TextDecorations" Value="Underline"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Toggle Switch -->
        <Style x:Key="SwitchToggleButton" TargetType="ToggleButton">
            <Setter Property="Width" Value="50"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Grid Background="Transparent">
                            <Border x:Name="Track"
                            Background="{StaticResource LightGrayBrush}"
                            CornerRadius="14"/>

                            <Ellipse x:Name="Thumb"
                             Fill="White"
                             Width="22"
                             Height="22"
                             HorizontalAlignment="Left"
                             Margin="3">
                                <Ellipse.Effect>
                                    <DropShadowEffect ShadowDepth="1"
                                              Opacity="0.1"
                                              BlurRadius="2"/>
                                </Ellipse.Effect>
                            </Ellipse>
                        </Grid>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Track"
                                Property="Background"
                                Value="{StaticResource PrimaryBlueBrush}"/>
                                <Setter TargetName="Thumb"
                                Property="HorizontalAlignment"
                                Value="Right"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </UserControl.Resources>

    <!-- ✅ Background utama transparan -->
    <Grid Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Settings" Style="{StaticResource SettingsTitle}"/>

        <!-- Tab Utama -->
        <TabControl Grid.Row="1" Style="{StaticResource SettingsTabControl}">

            <!-- Tab 1: Account Info -->
            <TabItem Header="Account Information" Style="{StaticResource SettingsTabItem}">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Padding="0,0,5,0">
                    <StackPanel Margin="0,10,0,0">

                        <!-- Personal Information Section -->
                        <Border Style="{StaticResource SectionContainer}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <!-- Header Biru -->
                                <Grid Grid.Row="0" Style="{StaticResource SectionHeaderGrid}">
                                    <Border Background="{StaticResource PrimaryBlueBrush}" CornerRadius="10,10,0,0">
                                        <Grid>
                                            <TextBlock Text="Personal Information" Style="{StaticResource SectionHeaderTitle}"/>
                                            <Button Content="Edit" Style="{StaticResource HeaderButton}"/>
                                        </Grid>
                                    </Border>
                                </Grid>

                                <!-- Konten Formulir -->
                                <Grid Grid.Row="1" Margin="20">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Full Name -->
                                    <StackPanel Grid.Row="0" Margin="0,0,0,15">
                                        <TextBlock Text="Full Name" Style="{StaticResource FormLabel}"/>
                                        <TextBox Text="Bambas Pamungkang" Style="{StaticResource FormTextBox}"/>
                                    </StackPanel>

                                    <!-- Gender & Birth Date -->
                                    <Grid Grid.Row="1" Margin="0,0,0,15">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="15"/>
                                            <ColumnDefinition Width="2*"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="Gender" Style="{StaticResource FormLabel}"/>
                                            <ComboBox Style="{StaticResource FormComboBox}" SelectedIndex="0">
                                                <ComboBoxItem Content="Wanita"/>
                                                <ComboBoxItem Content="Pria"/>
                                            </ComboBox>
                                        </StackPanel>

                                        <StackPanel Grid.Column="2">
                                            <TextBlock Text="Birth Date" Style="{StaticResource FormLabel}"/>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="10"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="10"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <ComboBox Grid.Column="0" Style="{StaticResource FormComboBox}" SelectedIndex="0">
                                                    <ComboBoxItem Content="10"/>
                                                </ComboBox>
                                                <ComboBox Grid.Column="2" Style="{StaticResource FormComboBox}" SelectedIndex="0">
                                                    <ComboBoxItem Content="Juni"/>
                                                </ComboBox>
                                                <ComboBox Grid.Column="4" Style="{StaticResource FormComboBox}" SelectedIndex="0">
                                                    <ComboBoxItem Content="Tahun"/>
                                                </ComboBox>
                                            </Grid>
                                        </StackPanel>
                                    </Grid>

                                    <!-- City -->
                                    <StackPanel Grid.Row="2" Margin="0,0,0,15">
                                        <TextBlock Text="City" Style="{StaticResource FormLabel}"/>
                                        <TextBox Text="Kota Asal" Style="{StaticResource FormTextBox}"/>
                                    </StackPanel>

                                </Grid>
                            </Grid>
                        </Border>

                        <!-- Email Section -->
                        <Border Style="{StaticResource SectionContainer}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <!-- Header Biru -->
                                <Grid Grid.Row="0" Style="{StaticResource SectionHeaderGrid}">
                                    <Border Background="{StaticResource PrimaryBlueBrush}" CornerRadius="10,10,0,0">
                                        <Grid>
                                            <TextBlock Text="Email" Style="{StaticResource SectionHeaderTitle}"/>
                                            <Button Content="+ Email" Style="{StaticResource HeaderButton}"/>
                                        </Grid>
                                    </Border>
                                </Grid>

                                <!-- Konten Formulir -->
                                <Grid Grid.Row="1" Margin="20">
                                    <StackPanel Margin="0,0,0,15">
                                        <TextBlock Text="Email Address" Style="{StaticResource FormLabel}"/>
                                        <TextBox Text="BambasGantenks@yahoo.com" Style="{StaticResource FormTextBox}"/>
                                    </StackPanel>
                                </Grid>
                            </Grid>
                        </Border>

                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Tab 2: Password & Security -->
            <TabItem Header="Password &amp; Security" Style="{StaticResource SettingsTabItem}">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Padding="0,0,5,0">
                    <StackPanel Margin="0,10,0,0">

                        <!-- Security & Authentication Section -->
                        <Border Style="{StaticResource SectionContainer}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <!-- Header Biru -->
                                <Grid Grid.Row="0" Style="{StaticResource SectionHeaderGrid}">
                                    <Border Background="{StaticResource PrimaryBlueBrush}" CornerRadius="10,10,0,0">
                                        <Grid>
                                            <TextBlock Text="Security &amp; Authetication" Style="{StaticResource SectionHeaderTitle}"/>
                                        </Grid>
                                    </Border>
                                </Grid>

                                <!-- Konten -->
                                <Grid Grid.Row="1" Margin="20,25,20,25">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                        <TextBlock Text="Enable login verification" FontSize="16" FontWeight="SemiBold" Foreground="{StaticResource DarkGrayBrush}"/>
                                        <TextBlock Text="Send me a verification code every time I log in from a new device" FontSize="14" Foreground="{StaticResource TextGrayBrush}" Margin="0,5,0,0"/>
                                    </StackPanel>

                                    <ToggleButton Grid.Column="1" IsChecked="True" Style="{StaticResource SwitchToggleButton}" VerticalAlignment="Center" Margin="20,0,0,0"/>

                                </Grid>
                            </Grid>
                        </Border>

                        <!-- Delete Account Section -->
                        <Border Style="{StaticResource SectionContainer}">
                            <Grid Margin="20,25,20,25">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                    <TextBlock Text="Delete Account" FontSize="18" FontWeight="Bold" Foreground="{StaticResource DarkGrayBrush}"/>
                                    <TextBlock Text="Once your account is deleted, you will not be able to restore your account or data." FontSize="14" Foreground="{StaticResource TextGrayBrush}" Margin="0,5,0,0" TextWrapping="Wrap"/>
                                </StackPanel>

                                <Button Grid.Column="1" Content="Delete" Style="{StaticResource LinkButton}" VerticalAlignment="Center" Margin="20,0,0,0"/>
                            </Grid>
                        </Border>

                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            <CheckBox Content="CheckBox"/>

        </TabControl>
    </Grid>
</UserControl>