<UserControl x:Class="ShipMank_WPF.Components.CardKapalType"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ShipMank_WPF.Components"
             mc:Ignorable="d" 
             d:DesignHeight="350" d:DesignWidth="300"
             x:Name="root">

    <Grid>
        <!-- Card Container -->
        <Border Background="White" 
                CornerRadius="15" 
                Margin="10"
                BorderBrush="#EEF2F6"
                BorderThickness="1">

            <Border.Effect>
                <DropShadowEffect Color="#000000" Opacity="0.08" BlurRadius="20" ShadowDepth="5" Direction="270"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="200"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" 
                        CornerRadius="15,15,0,0">
                    <Border.Background>
                        <ImageBrush ImageSource="{Binding ImageSource, ElementName=root}" 
                                    Stretch="UniformToFill"/>
                    </Border.Background>
                </Border>

                <StackPanel Grid.Row="1" Margin="20,20,20,25">

                    <!-- Judul Jenis Kapal -->
                    <TextBlock Text="{Binding JudulKapal, ElementName=root}"
                               FontSize="22"
                               FontWeight="Bold"
                               Foreground="#0F172A"
                               Margin="0,0,0,10"
                               TextTrimming="CharacterEllipsis"/>

                    <!-- Deskripsi Kapal -->
                    <TextBlock Text="{Binding DeskripsiKapal, ElementName=root}"
                               FontSize="14"
                               Foreground="#64748B"
                               TextWrapping="Wrap"
                               LineHeight="22"
                               MaxHeight="88" 
                               TextTrimming="CharacterEllipsis"/>

                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>