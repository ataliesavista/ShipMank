<UserControl x:Class="ShipMank_WPF.Components.CardKapalType"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ShipMank_WPF.Components"
             mc:Ignorable="d" 
             d:DesignHeight="350" d:DesignWidth="300"
             x:Name="root">

    <UserControl.Triggers>
        <EventTrigger RoutedEvent="MouseEnter">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation Storyboard.TargetName="CardTranslate"
                                     Storyboard.TargetProperty="Y"
                                     To="-10" Duration="0:0:0.3">
                        <DoubleAnimation.EasingFunction>
                            <CubicEase EasingMode="EaseOut"/>
                        </DoubleAnimation.EasingFunction>
                    </DoubleAnimation>

                    <DoubleAnimation Storyboard.TargetName="ImageScale"
                                     Storyboard.TargetProperty="ScaleX"
                                     To="1.1" Duration="0:0:0.4">
                        <DoubleAnimation.EasingFunction>
                            <CubicEase EasingMode="EaseOut"/>
                        </DoubleAnimation.EasingFunction>
                    </DoubleAnimation>
                    <DoubleAnimation Storyboard.TargetName="ImageScale"
                                     Storyboard.TargetProperty="ScaleY"
                                     To="1.1" Duration="0:0:0.4">
                        <DoubleAnimation.EasingFunction>
                            <CubicEase EasingMode="EaseOut"/>
                        </DoubleAnimation.EasingFunction>
                    </DoubleAnimation>

                    <DoubleAnimation Storyboard.TargetName="CardShadow"
                                     Storyboard.TargetProperty="BlurRadius"
                                     To="30" Duration="0:0:0.3"/>
                    <DoubleAnimation Storyboard.TargetName="CardShadow"
                                     Storyboard.TargetProperty="Opacity"
                                     To="0.2" Duration="0:0:0.3"/>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>

        <EventTrigger RoutedEvent="MouseLeave">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation Storyboard.TargetName="CardTranslate"
                                     Storyboard.TargetProperty="Y"
                                     To="0" Duration="0:0:0.3">
                        <DoubleAnimation.EasingFunction>
                            <CubicEase EasingMode="EaseIn"/>
                        </DoubleAnimation.EasingFunction>
                    </DoubleAnimation>

                    <DoubleAnimation Storyboard.TargetName="ImageScale"
                                     Storyboard.TargetProperty="ScaleX"
                                     To="1.0" Duration="0:0:0.3">
                        <DoubleAnimation.EasingFunction>
                            <CubicEase EasingMode="EaseIn"/>
                        </DoubleAnimation.EasingFunction>
                    </DoubleAnimation>
                    <DoubleAnimation Storyboard.TargetName="ImageScale"
                                     Storyboard.TargetProperty="ScaleY"
                                     To="1.0" Duration="0:0:0.3">
                        <DoubleAnimation.EasingFunction>
                            <CubicEase EasingMode="EaseIn"/>
                        </DoubleAnimation.EasingFunction>
                    </DoubleAnimation>

                    <DoubleAnimation Storyboard.TargetName="CardShadow"
                                     Storyboard.TargetProperty="BlurRadius"
                                     To="20" Duration="0:0:0.3"/>
                    <DoubleAnimation Storyboard.TargetName="CardShadow"
                                     Storyboard.TargetProperty="Opacity"
                                     To="0.08" Duration="0:0:0.3"/>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </UserControl.Triggers>

    <Grid>
        <Border Background="White" 
                CornerRadius="15" 
                Margin="10"
                BorderBrush="#EEF2F6"
                BorderThickness="1"
                RenderTransformOrigin="0.5,0.5">

            <Border.RenderTransform>
                <TranslateTransform x:Name="CardTranslate" Y="0"/>
            </Border.RenderTransform>

            <Border.Effect>
                <DropShadowEffect x:Name="CardShadow" Color="#000000" Opacity="0.08" BlurRadius="20" ShadowDepth="5" Direction="270"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="200"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" 
                        CornerRadius="15,15,0,0">
                    <Border.Background>
                        <ImageBrush ImageSource="{Binding ImageSource, ElementName=root}" 
                                    Stretch="UniformToFill">
                            <ImageBrush.RelativeTransform>
                                <ScaleTransform x:Name="ImageScale" CenterX="0.5" CenterY="0.5" ScaleX="1.0" ScaleY="1.0"/>
                            </ImageBrush.RelativeTransform>
                        </ImageBrush>
                    </Border.Background>
                </Border>

                <StackPanel Grid.Row="1" Margin="20,20,20,25">

                    <TextBlock Text="{Binding JudulKapal, ElementName=root}"
                               FontSize="22"
                               FontWeight="Bold"
                               Foreground="#0F172A"
                               Margin="0,0,0,10"
                               TextTrimming="CharacterEllipsis"/>

                    <TextBlock Text="{Binding DeskripsiKapal, ElementName=root}"
                               FontSize="14"
                               Foreground="#64748B"
                               TextWrapping="Wrap"
                               LineHeight="22"
                               MaxHeight="88" 
                               TextTrimming="CharacterEllipsis"/>

                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>