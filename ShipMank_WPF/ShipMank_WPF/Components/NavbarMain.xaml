            <!-- Login/Register Buttons (Tidak berubah) -->
            <StackPanel Orientation="Horizontal" 
                        Grid.Column="2" 
                        VerticalAlignment="Center"
                        HorizontalAlignment="Right"
                        Margin="0,0,50,0">

                <Button Content="Masuk"
                        Height="30"
                        Background="#FFF9AF"
                        FontFamily="Dubai"
                        FontWeight="SemiBold"
                        Cursor="Hand"
                        BorderThickness="0"
                        Width="100"
                        Margin="0,0,15,0"
                        Click="LoginButton_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                            <Setter Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect 
                                        Color="Gray" 
                                        Opacity="0.2" 
                                        ShadowDepth="1"/>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Resources>
                </Button>

                <Button Content="Daftar"
                        Height="30"
                        Background="#154D71"
                        FontFamily="Dubai"
                        FontWeight="SemiBold"
                        Foreground="White"
                        Cursor="Hand"
                        BorderThickness="0"
                        Width="100"
                        Click="SignUpButton_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                            <Setter Property="Effect">
