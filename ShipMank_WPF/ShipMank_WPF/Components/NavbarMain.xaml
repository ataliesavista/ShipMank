<UserControl x:Class="ShipMank_WPF.Components.NavbarMain"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ShipMank_WPF.Components"
             mc:Ignorable="d" 
             Height="70"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Top">

    <Border Background="White" Padding="20,10" HorizontalAlignment="Stretch">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Image Source="/Assets/logob.png" 
                   Height="35" 
                   Width="50" 
                   VerticalAlignment="Center"
                   Grid.Column="0"
                   Margin="30,0,0,0"/>

            <StackPanel Orientation="Horizontal" 
                        Grid.Column="2" 
                        VerticalAlignment="Center"
                        HorizontalAlignment="Right"
                        Margin="0,0,50,0">

                <TextBlock Text="Help" 
                           FontWeight="Bold" 
                           VerticalAlignment="Center" 
                           Cursor="Hand" 
                           Margin="0,0,30,0"/>

                <TextBlock Text="Orders" 
                           FontWeight="Bold" 
                           VerticalAlignment="Center" 
                           Cursor="Hand" 
                           Margin="0,0,40,0"/>

                <Button Content="Masuk"
                        Height="30"
                        Background="#FFF9AF"
                        FontFamily="Dubai"
                        FontWeight="SemiBold"
                        Cursor="Hand"
                        BorderThickness="0"
                        Width="100"
                        Margin="0,0,15,0"
                        Click="LoginButton_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                            <Setter Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect 
                                        Color="Gray" 
                                        Opacity="0.2" 
                                        ShadowDepth="1"/>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Resources>
                </Button>

                <Button Content="Daftar"
                        Height="30"
                        Background="#154D71"
                        FontFamily="Dubai"
                        FontWeight="SemiBold"
                        Foreground="White"
                        Cursor="Hand"
                        BorderThickness="0"
                        Width="100"
                        Click="SignUpButton_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                            <Setter Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect 
                                        Color="Gray" 
                                        Opacity="0.2" 
                                        ShadowDepth="1"/>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
